<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景色（黑色） -->
    <item android:id="@android:id/background" android:height="@dimen/dp_12">
        <shape>
            <corners android:radius="@dimen/dp_10"></corners>
            <solid android:color="#FFFFFF"></solid>
        </shape>
    </item>

    <!-- 设置进度条颜色（白色） -->
    <item android:id="@android:id/progress" android:height="@dimen/dp_12">
        <clip>
            <shape>
                <!--<gradient
                    android:angle="45"
                    android:endColor="#2DC8FE"
                    android:startColor="#149EFF"></gradient>-->
                <solid android:color="@color/app_theme"></solid>
                <corners android:radius="@dimen/dp_10"></corners>
            </shape>
        </clip>
    </item>
</layer-list>
