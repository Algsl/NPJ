<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90">

    <ImageView
        android:id="@+id/item_my_collect_store_pic"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"/>

    <TextView
        android:id="@+id/item_my_collect_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普拉达官方旗舰店"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text3"
        android:layout_toRightOf="@id/item_my_collect_store_pic"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_my_collect_store_name"
        android:layout_below="@id/item_my_collect_store_name"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text3"
            android:layout_marginLeft="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺商品"
            android:textColor="@color/text6"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:id="@+id/item_myCollect_tv_goodsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text3"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12">
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/collect_star"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_myCollect_tv_delCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:text="删除"
            android:background="@drawable/stroke_theme_5"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_15"/>
    </LinearLayout>

</RelativeLayout>