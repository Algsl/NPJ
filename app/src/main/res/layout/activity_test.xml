<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_marquee_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:padding="5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/vip_qy1" />

        <com.zthx.npj.utils.marquee.LooperImageView
            android:id="@+id/marquee_image_view"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:background="#fff" />

        <com.zthx.npj.utils.marquee.LooperTextView
            android:id="@+id/marquee_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/marquee_image_view"
            android:layout_toRightOf="@id/image"
            android:background="@color/black" />
    </RelativeLayout>


</FrameLayout>
