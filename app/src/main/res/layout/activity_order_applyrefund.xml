<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConfirmOrderActivity"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <ImageView
            android:id="@+id/ac_order_applyRefund_iv_goodsImg"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/at_order_applyRefund_tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@id/ac_order_applyRefund_iv_goodsImg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_23"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text6"
            android:text="毒贩夫妇付付付付付付付付付付付付付付付付付付付付过"
            android:layout_marginTop="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignLeft="@id/at_order_applyRefund_tv_goodsName"
            android:layout_below="@id/at_order_applyRefund_tv_goodsName">
            <TextView
                android:id="@+id/at_order_applyRefund_tv_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text9"
                android:layout_marginTop="@dimen/dp_5"
                android:text="化妆品净含量：520ml"/>
            <TextView
                android:id="@+id/at_order_applyRefund_tv_goodsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_100"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text9"
                android:text="x1"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>
    <RelativeLayout
        android:id="@+id/at_confirm_order_rl_ziti"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货物状态"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:id="@+id/at_confirm_order_iv_go"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/mine_dingdan_go"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/at_confirm_order_iv_go"
            android:layout_marginRight="@dimen/dp_6"
            android:text="请选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text6"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款原因"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:id="@+id/ac_order_applyRefund_choose"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/mine_dingdan_go"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_toLeftOf="@id/ac_order_applyRefund_choose"
            android:layout_marginRight="@dimen/dp_6"
            android:text="请选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text6"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="退款金额"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="￥ 1560"
            android:textColor="@color/app_theme"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/line"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="最多1560元，含运费￥0.00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:text="退款说明："/>
        <EditText
            android:id="@+id/ac_order_applyRefund_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@null"
            android:hint="选填"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传凭证"
            android:layout_margin="@dimen/dp_12"/>
        <ImageView
            android:id="@+id/ac_order_applyRefund_img"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/add_pic"/>
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/ac_order_applyRefund_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:background="@color/app_theme"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"
        />
</RelativeLayout>