<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConfirmOrderActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/at_confirm_order_rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@drawable/goods_detial_back" />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/goods_detail_home" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text3"
            android:text="确认订单"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/at_confirm_order_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_59">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/confirm_order_location"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/at_confirm_order_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="选择收货地址"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/background"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/confirm_store"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/at_confirm_order_tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="xxx旗舰店"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/text6"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_125">
                <ImageView
                    android:id="@+id/at_confirm_order_iv_pic"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/at_confirm_order_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_toRightOf="@id/at_confirm_order_iv_pic"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_23"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text6"
                    android:text="毒贩夫妇付付付付付付付付付付付付付付付付付付付付过"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/at_confirm_order_tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/at_confirm_order_tv_title"
                    android:layout_below="@id/at_confirm_order_tv_title"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"
                    android:text="规格：速度 500/g"/>

                <TextView
                    android:id="@+id/at_confirm_order_tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/at_confirm_order_tv_size"
                    android:layout_below="@id/at_confirm_order_tv_size"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/app_theme"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="￥66"/>

                <TextView
                    android:id="@+id/at_confirm_order_tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_below="@id/at_confirm_order_tv_size"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text9"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="X1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/at_confirm_order_iv_pic"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_14"
                    android:text="选择提货方式"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <LinearLayout
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="@dimen/dp_21"
                    android:orientation="horizontal"
                    android:layout_below="@id/at_confirm_order_iv_pic"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12"
                    android:padding="@dimen/dp_2"
                    android:background="@drawable/stroke_app_theme">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="自提"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/app_theme"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@android:color/white"
                        android:text="配送"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:text="10.00"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/app_theme"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/at_confirm_order_rl_ziti"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自提商家"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_14"/>

                <ImageView
                    android:id="@+id/at_confirm_order_iv_go"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/mine_dingdan_go"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/at_confirm_order_tv_to_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/at_confirm_order_iv_go"
                    android:layout_marginRight="@dimen/dp_6"
                    android:text="xxx旗舰店"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text6"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/at_confirm_order_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥625.00"
                    android:textColor="@color/app_theme"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/at_confirm_order_tv_price"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_6"
                    android:text="共一件商品  总计："/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#d4f1ee">
                <ImageView
                    android:id="@+id/iv_pop_lingdang"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/pop_goods_detail_lingdang"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成为农品街代言人此单立省403元"
                    android:textColor="@color/app_theme"
                    android:layout_toRightOf="@id/iv_pop_lingdang"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"/>

                <ImageView
                    android:id="@+id/iv_pop_look"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@drawable/pop_goods_detail_look"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即查看"
                    android:textColor="@color/app_theme"
                    android:textSize="@dimen/sp_13"
                    android:layout_toLeftOf="@id/iv_pop_look"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_6"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_confirm_order_iv_my_hongbao"
                    android:layout_width="@dimen/dp_31"
                    android:layout_height="@dimen/dp_26"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_order_hongbao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现金红包"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_confirm_order_iv_my_hongbao"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请输入红包兑换码"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择支付方式"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_confirm_order_iv_my_col"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_collect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钱包(当前余额0.00元)"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_confirm_order_iv_my_col"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/confirm_unselect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_confirm_order_iv_my_wechat"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_wechat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_confirm_order_iv_my_wechat"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/confirm_select"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_confirm_order_iv_alipay"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_alipay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_confirm_order_iv_alipay"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/confirm_unselect"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/gray_conner"
                android:hint="买家留言200字以内（选填）"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_13"/>
        </LinearLayout>
    </ScrollView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/at_confirm_order_tv_jin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际支付金额："
            android:layout_centerVertical="true"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_89"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/at_confirm_order_tv_jin"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_2"
            android:text="￥220"/>

        <Button
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/app_theme"
            android:text="支付订单"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>