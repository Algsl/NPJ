<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MineFragment"
    android:orientation="vertical"
    android:clipChildren="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_171"
                android:background="@drawable/mine_title_gb">

                <com.zthx.npj.view.MyCircleView
                    android:id="@+id/fg_mine_iv_head_pic"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_23"
                    android:layout_below="@id/fg_mine_iv_head_pic"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:src="@drawable/mine_gold_people"/>

                <TextView
                    android:id="@+id/fg_mine_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄吵吵"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@id/fg_mine_iv_head_pic"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/fg_mine_tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="155****2228"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@id/fg_mine_iv_head_pic"
                    android:layout_below="@id/fg_mine_tv_name"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_6"/>

                <TextView
                    android:id="@+id/fg_mine_tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天生我材必有用"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@id/fg_mine_iv_head_pic"
                    android:layout_below="@id/fg_mine_tv_tel"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_4"/>

                <ImageView
                    android:id="@+id/fg_mine_iv_settings"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_6"
                    android:src="@drawable/settings"/>

                <ImageView
                    android:id="@+id/fg_mine_iv_message"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_below="@id/fg_mine_iv_settings"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:src="@drawable/shopping_message"/>

                <ImageView
                    android:id="@+id/fg_mine_iv_people_right"
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="@dimen/dp_95"
                    android:layout_below="@id/fg_mine_iv_message"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@drawable/mine_people_right"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_131"
                    android:background="@drawable/white_conner"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12">

                    <LinearLayout
                        android:id="@+id/fg_mine_ll_collect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:text="20"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_coin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:text="20"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="葫芦币"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_coupon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:text="20"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text9"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_below="@id/rl_title"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_12"/>
                <ImageView
                    android:id="@+id/iv_jiantou"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/mine_dingdan_go"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_17"/>
                <TextView
                    android:id="@+id/fg_mine_tv_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="全部订单"
                    android:textColor="@color/text6"
                    android:textSize="@dimen/sp_12"
                    android:layout_toLeftOf="@id/iv_jiantou"
                    android:layout_marginRight="@dimen/dp_6"/>

            </RelativeLayout>
            <!--<view-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_1"-->
                <!--android:background="@color/background"-->
                <!--&gt;</view>-->

            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fg_mine_ll_wait_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:src="@drawable/mine_pay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待付款"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"
                        android:layout_marginTop="@dimen/dp_9"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fg_mine_ll_wait_delivery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:src="@drawable/mine_fahuo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待发货"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"
                        android:layout_marginTop="@dimen/dp_9"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fg_mine_ll_wait_take_delivery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:src="@drawable/mine_delivery"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待收货"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"
                        android:layout_marginTop="@dimen/dp_9"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fg_mine_ll_wait_evaluate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:src="@drawable/mine_evalute"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待评价"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"
                        android:layout_marginTop="@dimen/dp_9"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fg_mine_ll_custom_service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:src="@drawable/mine_custom_service"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退款/售后"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"
                        android:layout_marginTop="@dimen/dp_9"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@drawable/mine_middle_title"/>

            <!--<view-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_1"-->
                <!--android:background="@color/background"-->
                <!--android:layout_marginTop="@dimen/dp_10"></view>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_73"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fg_mine_ll_my_wallet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/mine_my_wallet"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的钱包"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/mine_my_store"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的店铺"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/mine_my_renzheng"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的认证"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_73"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/mine_xianxaidian"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="线下门店"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/mine_my_gongqiu"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的供求"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/mine_kefu"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="帮助与客服"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猜你喜欢"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_13"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fg_mine_rv_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_13"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>