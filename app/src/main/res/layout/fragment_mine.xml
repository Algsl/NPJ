<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragment.MineFragment"
    android:background="@color/background"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/fg_mine_nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_220"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/mine_title_gb">

                    <LinearLayout
                        android:id="@+id/fg_mine_ll"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_120"
                        android:layout_marginTop="@dimen/dp_30"
                        android:orientation="vertical">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/fg_mine_iv_head_pic"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_18"
                            android:scaleType="fitXY"
                            app:riv_oval="true"
                            android:src="@drawable/logo"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:id="@+id/fg_mine_iv_levelimg"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_23"
                            android:layout_below="@id/fg_mine_iv_head_pic"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/level1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fg_mine_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:text="农品街新客"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@id/fg_mine_ll"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_45"/>

                    <TextView
                        android:id="@+id/fg_mine_tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:text="15236545654"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@id/fg_mine_ll"
                        android:layout_below="@id/fg_mine_tv_name"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_6"/>

                    <TextView
                        android:id="@+id/fg_mine_tv_word"
                        android:layout_width="@dimen/dp_180"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:text="农业社交电商开创者"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@id/fg_mine_ll"
                        android:layout_below="@id/fg_mine_tv_tel"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_4"/>

                    <ImageView
                        android:id="@+id/fg_mine_iv_settings"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_36"
                        android:src="@drawable/settings"/>

                    <ImageView
                        android:id="@+id/fg_mine_iv_message"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_below="@id/fg_mine_iv_settings"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_4"
                        android:src="@drawable/home_message"/>

                    <ImageView
                        android:id="@+id/fg_mine_iv_people_right"
                        android:layout_width="@dimen/dp_82"
                        android:layout_height="@dimen/dp_95"
                        android:layout_below="@id/fg_mine_iv_message"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_13"
                        android:src="@drawable/mine_people_right"/>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_161"
                    android:background="@drawable/white_conner"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12">

                    <LinearLayout
                        android:id="@+id/fg_mine_ll_collect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fg_mine_tv_collectionNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:text="20"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_coin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fg_mine_tv_gourdCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:text="20"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="葫芦币"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_coupon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fg_mine_tv_couponNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:text="20"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text9"/>
                    </LinearLayout>
                </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_below="@id/rl_title"
                        android:background="@android:color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的订单"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/text3"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_12"/>
                        <ImageView
                            android:id="@+id/iv_jiantou"
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/mine_dingdan_go"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_17"/>
                        <TextView
                            android:id="@+id/fg_mine_tv_all_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_14"
                            android:text="全部订单"
                            android:textColor="@color/text6"
                            android:textSize="@dimen/sp_12"
                            android:layout_toLeftOf="@id/iv_jiantou"
                            android:layout_marginRight="@dimen/dp_6"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/background"/>
                    <LinearLayout
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/fg_mine_ll_wait_pay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/mine_pay"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待付款"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/text6"
                                    android:layout_marginTop="@dimen/dp_9"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/fg_mine_tv_payMsg"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:gravity="center"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:background="@drawable/red_conner"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/fg_mine_ll_wait_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/mine_fahuo"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待发货"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/text6"
                                    android:layout_marginTop="@dimen/dp_9"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/fg_mine_tv_sendMsg"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:gravity="center"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:text="20"
                                android:background="@drawable/red_conner"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/fg_mine_ll_wait_take_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/mine_delivery"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待收货"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/text6"
                                    android:layout_marginTop="@dimen/dp_9"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/fg_mine_tv_receiveMsg"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:gravity="center"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:text="20"
                                android:background="@drawable/red_conner"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/fg_mine_ll_wait_evaluate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/mine_evalute"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待评价"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/text6"
                                    android:layout_marginTop="@dimen/dp_9"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/fg_mine_tv_commentMsg"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:gravity="center"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:text="20"
                                android:background="@drawable/red_conner"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/fg_mine_ll_custom_service"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/mine_custom_service"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="退款/售后"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/text6"
                                    android:layout_marginTop="@dimen/dp_9"/>
                            </LinearLayout>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/fg_mine_tv_rebackMsg"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_12"
                                android:gravity="center"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:text="20"
                                android:background="@drawable/red_conner"/>
                        </RelativeLayout>
                    </LinearLayout>
                <ImageView
                    android:id="@+id/fg_mine_iv_jihuo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:src="@drawable/mine_middle_title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_73"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_wallet"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/mine_my_wallet"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的钱包"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_store"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/mine_my_store"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的店铺"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_attestation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/mine_my_renzheng"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的认证"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_6"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_73"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_offlinestore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/mine_xianxaidian"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线下门店"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_my_supply"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/mine_my_gongqiu"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的供求"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fg_mine_ll_help"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/mine_kefu"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="帮助与客服"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_6"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猜你喜欢"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_13"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fg_mine_rv_like"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_13"/>
                    <TextView
                        android:id="@+id/seeMore"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center"
                        android:text="查看更多"/>
            </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <include
        layout="@layout/title_theme"/>
</RelativeLayout>