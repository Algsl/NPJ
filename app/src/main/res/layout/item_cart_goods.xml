<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_95"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_cartGoods_iv_goodsImg"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/gray_conner"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="@dimen/dp_5"/>
        <TextView
            android:id="@+id/item_cartGoods_tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:maxLines="1"
            android:layout_toRightOf="@id/item_cartGoods_iv_goodsImg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text6"
            android:text="毒贩夫妇付付付付付付付付付付付付付付付付付付付付过"
            android:layout_marginTop="@dimen/dp_5"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:layout_below="@+id/item_cartGoods_tv_goodsName"
            android:layout_alignLeft="@id/item_cartGoods_tv_goodsName">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_margin="@dimen/dp_5"
                android:text="颜色分类：玫瑰金"
                android:textColor="@color/text9"
                android:textSize="@dimen/sp_12"
                android:background="@color/background"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/item_cartGoods_tv_goodsName">
            <TextView
                android:id="@+id/item_cartGoods_tv_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/app_theme"
                android:layout_marginTop="@dimen/dp_5"
                android:text="￥66"/>
            <TextView
                android:id="@+id/item_cartGoods_tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text9"
                android:layout_marginTop="@dimen/dp_5"
                android:text="X1"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
