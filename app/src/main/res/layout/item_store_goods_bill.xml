<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_99">
        
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_store_goods_bill_iv_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:riv_corner_radius="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/item_storeQuotation_iv_video"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_35"
            android:src="@drawable/item_play"/>
        <TextView
            android:id="@+id/item_store_goods_bill_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农家瓜果蔬菜批发，纯天然新鲜无污染，绿色卫生安全"
            android:layout_toRightOf="@id/item_store_goods_bill_iv_pic"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_11"
            android:maxLines="2"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:id="@+id/item_store_goods_bill_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥66.66"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/app_theme"
            android:layout_alignLeft="@id/item_store_goods_bill_tv_title"
            android:layout_below="@id/item_store_goods_bill_tv_title"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/item_store_goods_bill_tv_goodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×1"
            android:textColor="@color/text9"
            android:textSize="@dimen/sp_13"
            android:layout_alignTop="@id/item_store_goods_bill_tv_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">
                <TextView
                    android:id="@+id/item_store_goods_bill_tv_orderSn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订  单  号：544335535563"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_5">

                <TextView
                    android:id="@+id/item_store_goods_bill_tv_orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="下单日期：2019年5月30日"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_store_goods_bill_ll"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_storeGoodsBill_iv_state"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/refund"
                    android:layout_toLeftOf="@id/item_store_goods_bill_tv_state"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/item_store_goods_bill_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请退换"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textColor="@color/app_theme"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_store_goods_bill_tv_send"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:text="发货"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@android:color/white"
                android:background="@color/app_theme"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/item_store_goods_bill_tv_drawaback"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:text="退款"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@android:color/white"
                android:background="@color/app_theme"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/item_storeGoodsBill_ll_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_storeGoodsBill_tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/item_storeGoodsBill_tv_time"
                android:layout_centerVertical="true"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_13"
                android:text="自动退款剩余时间："/>
            <com.zthx.npj.view.TimeTextView
                android:id="@+id/item_storeGoodsBill_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_13"
                android:text="23：50：20"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>