<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <include layout="@layout/title_theme"/>
        <ImageView
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_marginTop="@dimen/dp_34"
            android:src="@drawable/payfinish"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ac_orderFinish_riv_goodsImg"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_53"
            app:riv_corner_radius="@dimen/dp_5"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/ac_orderFinish_tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一品极光世界商贸"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_13"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:id="@+id/ac_orderFinish_tv_payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00元"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_23"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/ac_orderFinish_tv_seeOrder"
                android:layout_width="@dimen/dp_160"
                android:layout_height="match_parent"
                android:background="@drawable/theme_conner_5"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_4"
                android:textSize="@dimen/sp_15"
                android:text="查看订单"/>
            <TextView
                android:id="@+id/ac_orderFinish_tv_shopping"
                android:layout_width="@dimen/dp_160"
                android:layout_height="match_parent"
                android:background="@drawable/origin_conner_5"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="继续购物"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>