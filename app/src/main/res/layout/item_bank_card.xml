<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/theme_conner_5"
    android:layout_marginTop="@dimen/dp_10">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_bankCard_ll_cardBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:orientation="horizontal"
        app:riv_corner_radius="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/item_bankCard_iv_cardIcon"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_margin="@dimen/dp_15"/>
        <LinearLayout
            android:layout_toRightOf="@id/item_bankCard_iv_cardIcon"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="@dimen/dp_186"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_bankCard_tv_bankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/white"
                android:text="建设银行"/>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/line"
                android:text="储蓄卡"/>
            <TextView
                android:id="@+id/item_bankCard_tv_cardNumber"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white"
                android:text="****  ****  ****  2548"/>
        </LinearLayout>
</RelativeLayout>