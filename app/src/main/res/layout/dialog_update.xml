<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="@dimen/dp_430"
    android:background="@drawable/update_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_180"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dg_update_tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text3"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="发现新版本"/>
        <TextView
            android:id="@+id/dg_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_50"
            android:lineHeight="@dimen/dp_23"
            android:textColor="@color/text6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">
        <Button
            android:id="@+id/dg_update_btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:text="立即升级"
            android:visibility="visible"
            android:textColor="@color/white"
            android:background="@drawable/theme_conner_5"/>
        <TextView
            android:id="@+id/dg_update_tv_later"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/dg_update_btn_update"
            android:gravity="center"
            android:text="稍后再说"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dg_update_ll_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/dg_update_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dg_update_tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:text="0%"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:id="@+id/dg_update_tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0M/0M"/>
            <TextView
                android:id="@+id/dg_update_tv_runInBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="后台更新"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>