<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.StoreManagerBillActivity"
    android:background="@color/background">
    <include layout="@layout/title_theme"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:background="@color/app_theme"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/store_manager_bill_bg">
            <TextView
                android:id="@+id/at_store_manager_bill_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12325"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/app_theme"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_35"/>
            <TextView
                android:id="@+id/at_store_manager_bill_tv_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/at_store_manager_bill_tv_money"
                android:text="可用余额（元）"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/at_store_manager_bill_tv_log"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_14">
                <Button
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_23"
                    android:background="@drawable/stroke_theme_5"
                    android:text="提现"
                    android:textColor="@color/app_theme"
                    android:textSize="@dimen/sp_16"/>

                <Button
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_23"
                    android:background="@drawable/theme_conner_5"
                    android:text="去使用"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_15"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_conner_5"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="明细"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text3"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/background"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/at_store_manager_bill_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>