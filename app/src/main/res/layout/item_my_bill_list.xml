<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/item_myBillList_tv_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝花夕拾"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"/>

        <TextView
            android:id="@+id/item_myBillList_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"
            android:layout_alignParentBottom="true"></View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_myBillList_iv_goodsImg"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/logo"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            app:riv_corner_radius="@dimen/dp_5"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/item_storeQuotation_iv_video"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_35"
            android:src="@drawable/item_play"/>
        <TextView
            android:id="@+id/item_myBillList_tv_goodsName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="韩国control眼部精华打底液隔离打底保湿水正品代购"
            android:layout_toRightOf="@id/item_myBillList_iv_goodsImg"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_11"
            android:maxLines="2"
            android:ellipsize="end"/>
            <TextView
                android:id="@+id/item_myBillList_tv_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1560"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@color/app_theme"
                android:layout_alignLeft="@id/item_myBillList_tv_goodsName"
                android:layout_below="@id/item_myBillList_tv_goodsName"
                android:layout_marginTop="@dimen/dp_13"/>

        <TextView
            android:id="@+id/item_myBillList_tv_goodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_below="@id/item_myBillList_tv_goodsName"
            android:layout_marginTop="@dimen/dp_13"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/item_want_but_manager_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/item_want_but_manager_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(含杂费):"
            android:layout_toRightOf="@id/item_want_but_manager_tv2"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/item_myBillList_tv_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥260元"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/item_want_but_manager_tv3"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_12">

        <Button
            android:id="@+id/item_myBillList_btn_cancle"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_zise_15"
            android:text="取消订单"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"/>

        <Button
            android:id="@+id/item_myBillList_btn_delete"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_zise_15"
            android:text="删除订单"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"/>
        <Button
            android:id="@+id/item_myBillList_btn_cuidan"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/stroke_theme_15"
            android:layout_marginRight="@dimen/dp_12"
            android:text="催单"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"/>
        <Button
            android:id="@+id/item_myBillList_btn_pay"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/stroke_theme_15"
            android:text="去支付"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"/>
        <Button
            android:id="@+id/item_myBillList_btn_query"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_zise_15"
            android:text="查询物流"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>
        <Button
            android:id="@+id/item_myBillList_btn_confirm"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_theme_15"
            android:text="确认收货"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>
        <Button
            android:id="@+id/item_myBillList_btn_again"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_theme_15"
            android:text="再来一单"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>
        <Button
            android:id="@+id/item_myBillList_btn_comment"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_zise_15"
            android:text="评价"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>
        <Button
            android:id="@+id/item_myBillList_btn_goodsReturn"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/stroke_zise_15"
            android:text="退货"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>