<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_145"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_want_buy_manager_list_pic"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:riv_corner_radius="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/item_storeQuotation_iv_video"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_35"
            android:src="@drawable/item_play"/>
        <TextView
            android:id="@+id/item_want_buy_manager_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【求购】大型农场急需采购除草剂，大豆
玉米调节剂,有意者请联系"
            android:textColor="@color/text3"
            android:layout_marginRight="@dimen/dp_20"
            android:maxLines="2"
            android:lines="2"
            android:layout_toRightOf="@id/item_want_buy_manager_list_pic"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"/>

        <LinearLayout
            android:id="@+id/item_want_buy_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_below="@id/item_want_buy_manager_list_title"
            android:layout_alignLeft="@id/item_want_buy_manager_list_title">
            <TextView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_15"
                android:text="实人认证"
                android:gravity="center"
                android:textSize="@dimen/sp_11"
                android:textColor="@android:color/white"
                android:background="#4FA0F1"/>

            <TextView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_15"
                android:text="企业认证"
                android:gravity="center"
                android:textSize="@dimen/sp_11"
                android:textColor="@android:color/white"
                android:background="#F39B1F"
                android:layout_marginLeft="@dimen/dp_10"/>

            <TextView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_15"
                android:text="诚信认证"
                android:gravity="center"
                android:textSize="@dimen/sp_11"
                android:textColor="@android:color/white"
                android:background="#EB6877"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/item_want_buy_ll"
            android:layout_alignLeft="@id/item_want_buy_ll"
            android:layout_marginTop="@dimen/dp_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购量："
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                />
            <TextView
                android:id="@+id/item_wantBuy_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000斤"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/app_theme"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/item_wantBuy_btn_sale"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_theme_2"
            android:text="下架"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"/>
        <Button
            android:id="@+id/item_wantBuy_btn_share"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_theme_2"
            android:text="分享"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"/>
        <Button
            android:id="@+id/item_wantBuy_btn_edit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_theme_2"
            android:text="编辑"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_32"/>
        <Button
            android:id="@+id/item_wantBuy_btn_delete"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_gray_2"
            android:text="删除"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_32"/>

    </LinearLayout>

</LinearLayout>