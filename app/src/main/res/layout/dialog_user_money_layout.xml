<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择交易类型"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_22"
            android:textSize="@dimen/sp_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dl_userMoney_tv_all"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@color/app_theme"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:text="全部"/>
            <TextView
                android:id="@+id/dl_userMoney_tv_charge"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@android:color/white"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:text="充值"/>
            <TextView
                android:id="@+id/dl_userMoney_tv_widthdraw"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@android:color/white"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:text="提现"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dl_userMoney_tv_pay"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@android:color/white"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:text="支付"/>
            <TextView
                android:id="@+id/dl_userMoney_tv_system"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@android:color/white"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:text="系统"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/background" />

    <TextView
        android:id="@+id/dl_userMoney_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_15" />

</LinearLayout>