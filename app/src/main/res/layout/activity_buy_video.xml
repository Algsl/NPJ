<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BuyVideoActivity"
    android:orientation="vertical">

    <include
        layout="@layout/title"
        >
    </include>
    <LinearLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@android:color/white"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买账号"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"
                android:layout_marginLeft="@dimen/dp_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="哇唧唧哇"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:layout_marginRight="@dimen/dp_12"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/background"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_206"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_115">
                <ImageView
                    android:id="@+id/at_buy_video_iv_pic"
                    android:layout_width="@dimen/dp_95"
                    android:layout_height="@dimen/dp_95"
                    android:src="@drawable/logo"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/at_buy_video_iv_pic"
                    android:layout_marginLeft="@dimen/dp_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统提升种植能力五部曲"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/text3"
                        android:layout_marginTop="@dimen/dp_15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主讲：张宇房"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"
                        android:layout_marginTop="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型：疑难杂症"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="售价："
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥1255"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/app_theme"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10">
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_11"
                    android:background="@color/app_theme"
                    android:layout_marginLeft="@dimen/dp_12"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买须知"
                    android:textColor="@color/text6"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_9"/>
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_350"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="所有产品支持七天无理由退换货，购买产品，自签收之时开始（快递官网签收时间为准），七天内，对产品不满意，不喜欢等，在不影响第二次销售的情况下，都可以退换货"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text6"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/background"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付方式"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:id="@+id/at_confirm_order_iv_my_col"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:src="@drawable/confirm_collect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱包(当前余额0.00元)"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/at_confirm_order_iv_my_col"
                android:layout_marginLeft="@dimen/dp_13"/>

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/confirm_unselect"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:id="@+id/at_confirm_order_iv_my_wechat"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:src="@drawable/confirm_wechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/at_confirm_order_iv_my_wechat"
                android:layout_marginLeft="@dimen/dp_13"/>

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/confirm_select"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:id="@+id/at_confirm_order_iv_alipay"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:src="@drawable/confirm_alipay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/at_confirm_order_iv_alipay"
                android:layout_marginLeft="@dimen/dp_13"/>

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/confirm_unselect"/>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/gray_conner"
            android:hint="买家留言200字以内（选填）"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_13"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/at_confirm_order_tv_jin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际支付金额："
            android:layout_centerVertical="true"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_89"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/at_confirm_order_tv_jin"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_2"
            android:text="￥220"/>

        <Button
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/app_theme"
            android:text="支付订单"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>