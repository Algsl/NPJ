<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/title_theme"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/app_theme"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ac_withdraw_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_30"
            android:text="465"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_13"
            android:text="钱包余额（元）"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"
        android:text="金额"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/app_theme"
            android:text="￥"/>
        <EditText
            android:inputType="number"
            android:id="@+id/ac_withdraw_et_drawMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="提现金额最少10元，单笔限额5万元"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text9"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <Button
            android:id="@+id/ac_withdraw_btn_allMoney"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/stroke_theme_5"
            android:text="全部提现"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/app_theme"/>
    </RelativeLayout>
    <Button
        android:id="@+id/ac_withdraw_btn_draw"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/theme_conner_5"
        android:textSize="@dimen/sp_15"
        android:textColor="@android:color/white"
        android:text="提现"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text6"
        android:layout_marginTop="@dimen/dp_10"
        android:text="提现至余额"/>
</LinearLayout>