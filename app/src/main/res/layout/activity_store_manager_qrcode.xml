<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StoreManagerQRCodeActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/app_theme"
        android:id="@+id/title">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:src="@drawable/white_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white"
            android:text="我的收款码"/>

        <TextView
            android:id="@+id/at_location_store_tv_ruzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_15"
            android:textColor="@android:color/white"
            android:text="账单"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_422">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:background="@color/app_theme"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/store_manager_qrcode_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开农品街扫一扫"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_101"/>

            <ImageView
                android:layout_width="@dimen/dp_157"
                android:layout_height="@dimen/dp_159"
                android:layout_marginTop="@dimen/dp_13"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="自用省钱 分享赚钱！"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:background="@drawable/white_conner_5"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款名称"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"
                android:layout_marginLeft="@dimen/dp_10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真的自闭了"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_15"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置优惠比率"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/store_manager_qr_jian"
                android:layout_marginLeft="@dimen/dp_15"/>

            <View
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_7"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_10"></View>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/store_manager_qr_jia"
                android:layout_marginLeft="@dimen/dp_10"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_14">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/store_manager_qr_tongzhi"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠比率25%，用户支付时葫芦币抵扣25%消费金额"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text9"/>
    </LinearLayout>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:background="@drawable/theme_conner_5"
        android:text="保存修改"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_14"/>


</LinearLayout>