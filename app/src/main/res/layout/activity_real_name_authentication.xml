<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.RealNameAuthenticationActivity">

    <include
        layout="@layout/title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/title">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:src="@drawable/real_person_banner"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_13">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="认证后您将获得以下权益"
                android:gravity="center_horizontal"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_14"/>
            <View
                android:layout_width="@dimen/dp_271"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp_1"
                android:background="@drawable/trust_text_bg"></View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_30">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/xinpin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新品发布"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/zuanshi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提高账号诚信值"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/youxian"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优先参加平台活动"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/renzheng0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证标签"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dp_20"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/sp_15"
                    android:background="@color/app_theme"
                    android:layout_marginLeft="@dimen/dp_12"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证须知"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.身份证正反照"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.手持身份证照片"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_3"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/at_trust_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击即表示同意"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《农品街平台认证协议》"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/app_theme"
            />
    </LinearLayout>

    <Button
        android:id="@+id/at_real_name_authentication_btn_attestation"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/at_trust_bottom"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/theme_conner_5"
        android:text="开始认证"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"/>

</RelativeLayout>
