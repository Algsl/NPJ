<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_271"
    android:layout_height="@dimen/dp_351"
    android:background="@drawable/popwindow_supply_products_bg">

    <RelativeLayout
        android:id="@+id/pop_sup_pro_rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">
        <ImageView
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_2"
            android:src="@drawable/pop_location_left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_2"
            android:src="@drawable/pop_location_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要报价"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_16"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/pop_sup_pro_rl_content1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/pop_sup_pro_rl_title"
        android:layout_marginTop="@dimen/dp_10">

        <EditText
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:hint="请填写商品"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text9"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@null"/>

        <TextView
            android:id="@+id/pop_sup_pro_tv_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/斤"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请填写价格"
            android:layout_toLeftOf="@id/pop_sup_pro_tv_danwei"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text9"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"
            android:layout_alignParentBottom="true"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pop_sup_pro_rl_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/pop_sup_pro_rl_content1">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/pop_sup_pro_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/background"></View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop_sup_pro_rl_add"
        android:layout_marginTop="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="(选填）请填写您想说的内容 "
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text9"
            android:background="@null"/>

    </LinearLayout>
     <Button
         android:layout_width="@dimen/dp_100"
         android:layout_height="@dimen/dp_30"
         android:background="@color/app_theme"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="@dimen/dp_43"
         android:text="提交"
         android:textColor="@android:color/white"
         android:textSize="@dimen/sp_15"/>
</RelativeLayout>