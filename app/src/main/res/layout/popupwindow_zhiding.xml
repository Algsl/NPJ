<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_275"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:text="选择天数"/>
        <ImageView
            android:id="@+id/pw_zhiding_iv_cancel"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:src="@drawable/pop_goods_detail_size_delete"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pw_zhiding_tv_item1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="1天"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:background="@drawable/zd_item_bg"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:id="@+id/pw_zhiding_tv_item2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="5天"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text9"
            android:background="@drawable/stroke_gray1_15"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/pw_zhiding_tv_item3"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="10天"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text9"
            android:background="@drawable/stroke_gray1_15"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/pw_zhiding_tv_item4"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="30天"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text9"
            android:background="@drawable/stroke_gray1_15"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_27"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_16"
        android:text="金额"/>
    <TextView
        android:id="@+id/pw_zhiding_tv_payMoney"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="￥1.00"
        android:textColor="@color/app_theme"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/gray_conner"/>
    <TextView
        android:id="@+id/pw_zhiding_tv_confirm"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/theme_conner_20"
        android:layout_marginTop="@dimen/dp_40"/>
</LinearLayout>