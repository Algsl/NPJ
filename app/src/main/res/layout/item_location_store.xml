<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_123"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_location_store_pic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/dp_12"
        app:riv_corner_radius="@dimen/dp_5"/>

    <TextView
        android:id="@+id/item_location_store_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="御而阁时尚健身房"
        android:layout_toRightOf="@id/item_location_store_pic"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_15"/>

    <LinearLayout
        android:id="@+id/item_location_store_ll_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/item_location_store_tv_title"
        android:layout_below="@id/item_location_store_tv_title">
        <ImageView
            android:id="@+id/item_location_store_iv_star1"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/item_location_store_unstar"/>
        <ImageView
            android:id="@+id/item_location_store_iv_star2"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/item_location_store_unstar"/>
        <ImageView
            android:id="@+id/item_location_store_iv_star3"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/item_location_store_unstar"/>
        <ImageView
            android:id="@+id/item_location_store_iv_star4"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/item_location_store_unstar"/>
        <ImageView
            android:id="@+id/item_location_store_iv_star5"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/item_location_store_unstar"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_location_store_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_location_store_tv_title"
        android:layout_below="@id/item_location_store_ll_star"
        android:text="郑州市文化路231号"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text6"/>

    <LinearLayout
        android:id="@+id/item_location_store_ll_dikou"
        android:layout_alignLeft="@id/item_location_store_tv_title"
        android:layout_below="@id/item_location_store_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:src="@drawable/item_location_store_dikou"/>
        <TextView
            android:id="@+id/item_location_store_tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="葫芦币折扣10%现金"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_location_store_ll_dikou2"
        android:layout_alignLeft="@id/item_location_store_tv_title"
        android:layout_below="@id/item_location_store_ll_dikou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:src="@drawable/item_location_store_dikou2"/>
        <TextView
            android:id="@+id/item_location_store_tv_relief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="新会员减免60元现金"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/item_location_store_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200m"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text6"/>
        <TextView
            android:id="@+id/item_location_store_tv_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前人气63"
            android:textColor="#FFBF00"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_3"/>
    </LinearLayout>

</RelativeLayout>