<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.zthx.npj.ui.MyWalletActivity">
    <include
        layout="@layout/title_theme"
        android:id="@+id/title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:background="@drawable/sopksemanrights_bg">
                <TextView
                    android:id="@+id/at_my_wallet_tv_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钱包余额（元）"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_42"/>
                <TextView
                    android:id="@+id/at_my_wallet_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_24"
                    android:layout_below="@id/at_my_wallet_tv_jine"
                    android:layout_marginLeft="@dimen/dp_42"/>

                <ImageView
                    android:id="@+id/at_my_wallet_iv_go"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_7"
                    android:src="@drawable/gogoogogo"
                    android:layout_alignTop="@id/at_my_wallet_tv_money"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_13"/>
                <TextView
                    android:id="@+id/at_myWallet_tv_mx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明细"
                    android:textColor="@android:color/white"
                    android:layout_toLeftOf="@id/at_my_wallet_iv_go"
                    android:layout_alignTop="@id/at_my_wallet_tv_money"
                    android:layout_marginRight="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_8"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ac_myWallet_rl_inManage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/white_conner_5">
                <ImageView
                    android:id="@+id/logo1"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/my_wallet_logo1"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益管理"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_15"
                    android:layout_toRightOf="@id/logo1"
                    android:layout_marginLeft="@dimen/dp_15"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/mine_dingdan_go"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ac_myallet_rl_bankCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/white_conner_5">
                <ImageView
                    android:id="@+id/logo2"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/my_wallet_logo2"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_15"
                    android:layout_toRightOf="@id/logo2"
                    android:layout_marginLeft="@dimen/dp_15"/>
                <ImageView
                    android:id="@+id/go2"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/mine_dingdan_go"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"/>

            </RelativeLayout>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <Button
        android:id="@+id/at_my_wallet_btn_tiqu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/app_theme"
        android:layout_alignParentBottom="true"
        android:text="提现"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"/>
</RelativeLayout>
