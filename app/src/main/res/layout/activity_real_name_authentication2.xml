<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.RealNameAuthentication2Activity"
    android:orientation="vertical"
    android:background="@color/background">

    <include
        layout="@layout/title"></include>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_13">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="基本信息"
                   android:gravity="center_horizontal"
                   android:textColor="@color/text6"
                   android:textSize="@dimen/sp_14"/>
               <View
                   android:layout_width="@dimen/dp_199"
                   android:layout_centerInParent="true"
                   android:layout_height="@dimen/dp_1"
                   android:background="@drawable/trust_text_bg"></View>
           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"
               android:layout_marginTop="@dimen/dp_10"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="姓名"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="3.5"
                   android:layout_height="match_parent"
                   android:background="@android:color/white"
                   android:hint="请填写您的真实姓名"
                   android:textColorHint="@color/text6"
                   android:textSize="@dimen/sp_12"
                   android:textColor="@color/text6"
                   android:paddingLeft="@dimen/dp_15"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="身份证号"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3.5">
                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:hint="请正确填写18位身份证号码"
                       android:textColorHint="@color/text6"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>

               </RelativeLayout>

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_13">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="图片资料"
                   android:gravity="center_horizontal"
                   android:textColor="@color/text6"
                   android:textSize="@dimen/sp_14"/>
               <View
                   android:layout_width="@dimen/dp_199"
                   android:layout_centerInParent="true"
                   android:layout_height="@dimen/dp_1"
                   android:background="@drawable/trust_text_bg"></View>
           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="@dimen/dp_12"
               android:layout_marginTop="@dimen/dp_20">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="上传身份证证件照片"
                   android:textSize="@dimen/sp_15"
                   android:textColor="@color/text3"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="(身份证正反照及手持照片各一张）"
                   android:textColor="@color/text6"
                   android:textSize="@dimen/sp_12"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="@dimen/dp_20">
               <LinearLayout
                   android:layout_width="@dimen/dp_105"
                   android:layout_height="@dimen/dp_105"
                   android:layout_weight="1"
                   android:background="@drawable/pic_mid_bg"
                   android:layout_marginLeft="@dimen/sp_12"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="身份证正面照"
                       android:textSize="@dimen/sp_14"
                       android:textColor="@color/text6"
                       android:layout_marginTop="@dimen/dp_65"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="@dimen/dp_105"
                   android:layout_height="@dimen/dp_105"
                   android:layout_weight="1"
                   android:background="@drawable/pic_mid_bg"
                   android:layout_marginLeft="@dimen/dp_18"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="身份证反面照"
                       android:textSize="@dimen/sp_14"
                       android:textColor="@color/text6"
                       android:layout_marginTop="@dimen/dp_65"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="@dimen/dp_105"
                   android:layout_height="@dimen/dp_105"
                   android:layout_weight="1"
                   android:background="@drawable/pic_mid_bg"
                   android:layout_marginLeft="@dimen/dp_18"
                   android:layout_marginRight="@dimen/dp_12"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="手持身份证照片"
                       android:textSize="@dimen/sp_14"
                       android:textColor="@color/text6"
                       android:layout_marginTop="@dimen/dp_65"/>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>
       <Button
           android:id="@+id/at_real_name_authentication2_btn_confirm"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_40"
           android:background="@color/app_theme"
           android:layout_alignParentBottom="true"
           android:text="确认提交"
           android:textColor="@android:color/white"
           android:textSize="@dimen/sp_15"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="*请确保姓名，身份证号码与本人身份信息一致"
           android:layout_above="@id/at_real_name_authentication2_btn_confirm"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="@dimen/dp_10"/>
   </RelativeLayout>

</LinearLayout>
