<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_170"
    android:layout_height="@dimen/dp_248"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@drawable/white_conner"
    android:layout_marginTop="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">
        <ImageView
            android:id="@+id/item_iv_classfiy_detail_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:background="#d4f1ee"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/item_tv_classfiy_detail_goods_selled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120已售"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/app_theme"
                android:layout_marginLeft="@dimen/dp_5"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_tv_classfiy_detail_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_game"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5">

        <TextView
            android:id="@+id/item_tv_classfiy_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="限量首发"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text6"/>

        <TextView
            android:id="@+id/item_tv_classfiy_detail_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥188"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@id/item_tv_classfiy_detail_text"
            android:textColor="@color/app_theme"/>

        <TextView
            android:id="@+id/item_tv_classfiy_detail_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text6"
            android:layout_marginRight="@dimen/dp_28"
            android:textStyle="italic"
            android:text="200"/>

    </RelativeLayout>

</LinearLayout>