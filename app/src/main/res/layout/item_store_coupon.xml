<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12"
    android:background="@drawable/store_coupon_bg"
    android:paddingLeft="@dimen/dp_15">

    <TextView
        android:id="@+id/item_store_coupon_tv_coupon_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5元"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/app_theme"
        android:layout_marginTop="@dimen/dp_12"/>

    <TextView
        android:id="@+id/item_store_coupon_tv_coupon_use_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单满299元使用（不含邮费）"
        android:layout_below="@id/item_store_coupon_tv_coupon_price"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_13"/>

    <TextView
        android:id="@+id/item_store_coupon_tv_coupon_use_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用期限：2019.3.21-2019.10-11"
        android:layout_below="@id/item_store_coupon_tv_coupon_use_term"
        android:textColor="@color/text9"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_16"
        android:text="立即领取"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/app_theme"/>

</RelativeLayout>