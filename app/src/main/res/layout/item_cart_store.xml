<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@drawable/white_conner"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:layout_gravity="center_vertical"
            android:src="@drawable/confirm_store"
            android:layout_marginLeft="@dimen/dp_12"/>

        <TextView
            android:id="@+id/item_cartStore_tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="xxx旗舰店"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_cartStore_rv"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"
            android:text="选择提货方式"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_21"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:padding="@dimen/dp_2"
            android:background="@drawable/stroke_app_theme">

            <Button
                android:id="@+id/item_cartStore_btn_ziti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="自提"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_13"/>

            <Button
                android:id="@+id/item_cartStore_btn_peisong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_theme"
                android:textSize="@dimen/sp_13"
                android:textColor="@android:color/white"
                android:text="配送"/>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:text="10.00"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_theme"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_cartStore_rl_peisong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:id="@+id/item_cartStore_iv_go"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/mine_dingdan_go"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"/>
        <TextView
            android:id="@+id/item_cartStore_tv_freeship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_cartStore_iv_go"
            android:layout_marginRight="@dimen/dp_6"
            android:text="￥0.00"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text6"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>
    <RelativeLayout
        android:id="@+id/item_cartStore_rl_ziti"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自提商家"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/item_cartStore_tv_to_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:text="哇唧唧哇旗舰店"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text9"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单备注"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14"/>
        <EditText
            android:id="@+id/item_cartStore_tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:hint="选填，请先和商家协商一致"
            android:textColorHint="@color/text9"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>
    <TextView
        android:id="@+id/item_cartStore_tv_zitiHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="#F32F2F"
        android:textSize="@dimen/sp_12"
        android:lineHeight="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_6"
        android:text="注：同店铺2个以上商品，如需不同提货方式，请务必在订单备注栏详细备注！"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/item_cartStore_tv_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥625.00"
            android:textColor="@color/app_theme"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/item_cartStore_tv_allGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_cartStore_tv_orderPrice"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text3"
            android:layout_centerVertical="true"
            android:text="共一件商品  小计："/>
    </RelativeLayout>
</LinearLayout>
