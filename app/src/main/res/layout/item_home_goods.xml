<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_250"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/item_iv_home_goods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_tv_home_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_game"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_17"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/item_tv_home_goods_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_to_game"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/item_tv_home_goods_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:layout_alignParentRight="true"
            android:text="@string/go_to_game"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/item_iv_home_goods_mall"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/item_tv_home_goods_mall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_to_game"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>


</LinearLayout>