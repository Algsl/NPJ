<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_168"
    android:layout_height="@dimen/dp_257"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_conner_8">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_home_goods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:riv_corner_radius_top_left="@dimen/dp_5"
        app:riv_corner_radius_top_right="@dimen/dp_5"/>
    <TextView
        android:id="@+id/item_tv_home_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_game"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/text6"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5">

        <TextView
            android:id="@+id/item_tv_home_goods_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥188"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/app_theme"/>

        <TextView
            android:id="@+id/item_tv_home_goods_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="￥200"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/theme_conner_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12">
            <TextView
                android:id="@+id/item_tv_home_goods_mall_name"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/go_to_game"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/dp_40"/>
        </RelativeLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_iv_home_goods_mall"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            app:riv_oval="true"
            app:riv_border_color="@color/white"
            app:riv_border_width="@dimen/dp_1"/>
    </RelativeLayout>
</LinearLayout>