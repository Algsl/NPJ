<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StoreManagerCenterActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <include
        layout="@layout/title"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的销售额"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text3"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_22"/>  
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/white_conner_5"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_13">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12321.00"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售额"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="122"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="葫芦币"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物料素材中心"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text3"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_22"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/white_conner_5"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_13">
        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

           <ImageView
               android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_25"
               android:src="@drawable/store_manager_wuliao"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料下载"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>