<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12">

    <RelativeLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/item_ak_iv_img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/item_play"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_11">

        <TextView
            android:id="@+id/item_ak_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="河南省农科大学教授农作物专题课程如何实现增产增收的秘诀"
            android:layout_marginTop="@dimen/dp_13"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/item_ak_tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2天前更新"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            android:layout_marginTop="@dimen/dp_13"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13">
            <TextView
                android:id="@+id/item_ak_tv_sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买次数 321"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                />

            <TextView
                android:id="@+id/item_ak_tv_look_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已观看 12052"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text9"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>