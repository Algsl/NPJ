<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tag="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeSearchActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/at_home_search_iv_back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"/>
        <EditText
            android:id="@+id/at_home_search_et_search"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_29"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_conner"
            android:layout_toRightOf="@id/at_home_search_iv_back"
            android:layout_marginLeft="@dimen/dp_20"
            android:hint="搜索你想要的产品"
            android:textSize="@dimen/sp_15"
            android:lines="1"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/dp_37"
            android:singleLine="true"/>
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/home_search_gray"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/at_home_search_et_search"
            android:layout_marginLeft="@dimen/dp_11"/>

        <TextView
            android:id="@+id/at_home_search_tv_search"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ac_homeSearch_ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索历史"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text9"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12" />

            <ImageView
                android:id="@+id/ac_homeSearch_iv_delHistory"
                android:layout_width="22dp"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:src="@drawable/home_search_delete"
                android:layout_marginRight="@dimen/dp_9"/>
        </RelativeLayout>
        <com.donkingliang.labels.LabelsView
            android:id="@+id/ac_homeSearch_lv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            tag:labelBackground="@drawable/gray_conner"
            tag:labelTextColor="@drawable/label_text"
            tag:labelTextSize="14sp"
            tag:labelTextPaddingBottom="@dimen/dp_4"
            tag:labelTextPaddingLeft="@dimen/dp_10"
            tag:labelTextPaddingRight="@dimen/dp_10"
            tag:labelTextPaddingTop="@dimen/dp_4"
            tag:lineMargin="10dp"
            tag:wordMargin="10dp"
            tag:selectType="SINGLE"
            tag:maxSelect="30" />
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/ac_homeSearch_rv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_22">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门搜索"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text9"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12" />
        </RelativeLayout>
        <com.donkingliang.labels.LabelsView
            android:id="@+id/ac_homeSearch_rv_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            tag:labelBackground="@drawable/gray_conner"
            tag:labelTextColor="@drawable/label_text"
            tag:labelTextSize="14sp"
            tag:labelTextPaddingBottom="@dimen/dp_4"
            tag:labelTextPaddingLeft="@dimen/dp_10"
            tag:labelTextPaddingRight="@dimen/dp_10"
            tag:labelTextPaddingTop="@dimen/dp_4"
            tag:lineMargin="10dp"
            tag:wordMargin="10dp"
            tag:selectType="SINGLE"
            tag:maxSelect="30" />
    </LinearLayout>
</LinearLayout>