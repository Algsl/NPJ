<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeSearchActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/at_home_search_iv_back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"/>
        <EditText
            android:id="@+id/at_home_search_et_search"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_29"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_conner"
            android:layout_toRightOf="@id/at_home_search_iv_back"
            android:layout_marginLeft="@dimen/dp_38"
            android:hint="搜索你想要的产品"
            android:textSize="@dimen/sp_15"
            android:lines="1"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/dp_37"
            android:singleLine="true"/>
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/home_search_gray"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/at_home_search_et_search"
            android:layout_marginLeft="@dimen/dp_11"/>

        <TextView
            android:id="@+id/at_home_search_tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ac_homeSearch_ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索历史"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text9"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12" />

            <ImageView
                android:id="@+id/ac_homeSearch_iv_delHistory"
                android:layout_width="22dp"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:src="@drawable/home_search_delete"
                android:layout_marginRight="@dimen/dp_9"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ac_homeSearch_rv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_22">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门搜索"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text9"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ac_homeSearch_rv_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>