<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StoreDetailActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_50"
               android:background="@android:color/white">

               <ImageView
                   android:layout_width="@dimen/dp_22"
                   android:layout_height="@dimen/dp_22"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/dp_6"
                   android:src="@drawable/back"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商家详情"
                   android:layout_centerInParent="true"
                   android:textSize="@dimen/sp_18"
                   android:textColor="@color/text3"
                   />
           </RelativeLayout>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_170"
               android:layout_marginLeft="@dimen/dp_12"
               android:layout_marginRight="@dimen/dp_12"
               />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_78">
               <TextView
                   android:id="@+id/at_store_detail_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="格瑞斯巴西柔术学院"
                   android:layout_marginLeft="@dimen/dp_12"
                   android:layout_marginTop="@dimen/dp_15"
                   android:textSize="@dimen/sp_15"
                   android:textColor="@color/text3"/>

               <LinearLayout
                   android:id="@+id/at_store_detail_ll_star"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/dp_2"
                   android:layout_alignLeft="@id/at_store_detail_name"
                   android:layout_below="@id/at_store_detail_name">
                   <ImageView
                       android:layout_width="@dimen/dp_14"
                       android:layout_height="@dimen/dp_14"
                       android:src="@drawable/item_location_store_star"/>
                   <ImageView
                       android:layout_width="@dimen/dp_14"
                       android:layout_height="@dimen/dp_14"
                       android:src="@drawable/item_location_store_star"/>
                   <ImageView
                       android:layout_width="@dimen/dp_14"
                       android:layout_height="@dimen/dp_14"
                       android:src="@drawable/item_location_store_star"/>
                   <ImageView
                       android:layout_width="@dimen/dp_14"
                       android:layout_height="@dimen/dp_14"
                       android:src="@drawable/item_location_store_unstar"/>
                   <ImageView
                       android:layout_width="@dimen/dp_14"
                       android:layout_height="@dimen/dp_14"
                       android:src="@drawable/item_location_store_unstar"/>
               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/at_store_detail_name"
                   android:layout_toRightOf="@id/at_store_detail_ll_star"
                   android:text="4.5分"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:textSize="@dimen/sp_13"
                   android:textColor="@color/text3"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_below="@id/at_store_detail_ll_star"
                   android:layout_alignLeft="@id/at_store_detail_ll_star"
                   android:gravity="center_vertical">
                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:src="@drawable/store_time"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="9:00-02:00营业"
                       android:layout_marginLeft="@dimen/dp_9"
                       android:textColor="@color/text6"
                       android:textSize="@dimen/sp_12"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="人均消费￥125"
                       android:layout_marginLeft="@dimen/dp_29"
                       android:textSize="@dimen/sp_13"
                       android:textColor="@color/text6"/>
               </LinearLayout>

               <Button
                   android:layout_width="@dimen/dp_40"
                   android:layout_height="@dimen/dp_40"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginRight="@dimen/dp_12"
                   android:layout_marginBottom="@dimen/dp_14"
                   android:text="付款"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/sp_16"
                   android:background="@drawable/circle_theme"/>
           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_10"
               android:background="@color/background"></View>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_68">
               <ImageView
                   android:layout_width="@dimen/dp_20"
                   android:layout_height="@dimen/dp_20"
                   android:src="@drawable/location_store_locate"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/dp_8"/>

               <TextView
                   android:id="@+id/at_store_detail_tv_address"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_38"
                   android:layout_marginTop="@dimen/dp_10"
                   android:text="金水区中州大道御郑汴路交叉口向西100米路南凯德广场3号楼15楼1502"
                   android:maxLines="2"
                   android:ellipsize="end"
                   android:maxEms="15"
                   android:textSize="@dimen/sp_13"
                   android:textColor="@color/text3"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/at_store_detail_tv_address"
                   android:layout_alignLeft="@id/at_store_detail_tv_address"
                   android:text="距中州锦绣花苑500m"
                   android:textColor="@color/text9"
                   android:textSize="@dimen/sp_12"/>

               <ImageView
                   android:id="@+id/at_store_detail_iv_call"
                   android:layout_width="@dimen/dp_24"
                   android:layout_height="@dimen/dp_24"
                   android:src="@drawable/cellphone"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/dp_17"/>

               <View
                   android:layout_width="@dimen/dp_1"
                   android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginBottom="@dimen/dp_11"
                   android:layout_toLeftOf="@id/at_store_detail_iv_call"
                   android:layout_marginRight="@dimen/dp_24"
                   android:background="@color/background"></View>
           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="@color/background"
               android:layout_marginRight="@dimen/dp_12"
               android:layout_marginLeft="@dimen/dp_12"></View>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_58"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/dp_11"
               android:gravity="center_vertical">
               <LinearLayout
                   android:id="@+id/item_location_store_ll_dikou"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/dp_5">
                   <ImageView
                       android:layout_width="@dimen/dp_17"
                       android:layout_height="@dimen/dp_17"
                       android:src="@drawable/item_location_store_dikou"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/dp_5"
                       android:text="葫芦币折扣10%现金"
                       android:textColor="@color/text6"
                       android:textSize="@dimen/sp_12"/>
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/item_location_store_ll_dikou2"
                   android:layout_alignLeft="@id/item_location_store_tv_title"
                   android:layout_below="@id/item_location_store_ll_dikou"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/dp_5">
                   <ImageView
                       android:layout_width="@dimen/dp_17"
                       android:layout_height="@dimen/dp_17"
                       android:src="@drawable/item_location_store_dikou2"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/dp_5"
                       android:text="新会员在该商家成为代言人首单结算减免60元现金"
                       android:textColor="@color/text6"
                       android:textSize="@dimen/sp_12"/>
               </LinearLayout>
           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="@color/background"
               android:layout_marginRight="@dimen/dp_12"
               android:layout_marginLeft="@dimen/dp_12"></View>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_85"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="用户评价(121)"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:textColor="@color/text3"
                   android:layout_marginLeft="@dimen/dp_11"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/app_theme"
                           android:text="4.9分"
                           android:textSize="@dimen/sp_15"
                           android:layout_centerInParent="true"/>
                   </RelativeLayout>
                   <View
                       android:layout_width="@dimen/dp_1"
                       android:layout_height="@dimen/dp_35"
                       android:background="@color/background"
                       android:layout_gravity="center_vertical"></View>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="综合评分"
                           android:textSize="@dimen/sp_13"
                           android:textColor="@color/text3"
                           android:layout_gravity="center"/>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_gravity="center"
                           android:layout_marginTop="@dimen/dp_2"
                           android:layout_alignLeft="@id/at_store_detail_name"
                           android:layout_below="@id/at_store_detail_name">
                           <ImageView
                               android:layout_width="@dimen/dp_14"
                               android:layout_height="@dimen/dp_14"
                               android:src="@drawable/item_location_store_star"/>
                           <ImageView
                               android:layout_width="@dimen/dp_14"
                               android:layout_height="@dimen/dp_14"
                               android:src="@drawable/item_location_store_star"/>
                           <ImageView
                               android:layout_width="@dimen/dp_14"
                               android:layout_height="@dimen/dp_14"
                               android:src="@drawable/item_location_store_star"/>
                           <ImageView
                               android:layout_width="@dimen/dp_14"
                               android:layout_height="@dimen/dp_14"
                               android:src="@drawable/item_location_store_unstar"/>
                           <ImageView
                               android:layout_width="@dimen/dp_14"
                               android:layout_height="@dimen/dp_14"
                               android:src="@drawable/item_location_store_unstar"/>
                       </LinearLayout>
                   </LinearLayout>
                   <View
                       android:layout_width="@dimen/dp_1"
                       android:layout_height="@dimen/dp_35"
                       android:background="@color/background"
                       android:layout_gravity="center_vertical"></View>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="高于80%同行"
                           android:textColor="@color/text3"
                           android:textSize="@dimen/sp_13"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="好评率100%"
                           android:textColor="@color/text3"
                           android:textSize="@dimen/sp_13"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

           <android.support.v7.widget.RecyclerView
               android:id="@+id/at_store_detail_rv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </android.support.v7.widget.RecyclerView>
       </LinearLayout>
   </ScrollView>


</LinearLayout>