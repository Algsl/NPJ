<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_137"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@android:color/white"
                android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_97">
            <TextView
                android:id="@+id/item_address_tv_consignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="巨星不易"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/item_address_tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_12"
                android:text="154****2546"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/item_address_tv_isDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="默认地址"
                android:textColor="#2ABBAA"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/item_address_tv_address"
                android:layout_width="@dimen/dp_275"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_24"
                android:text="北京市金水区郑汴路未来路嘉禾万事小区1号楼4
单元蜂巢快递柜"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_address_tv_edit"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/stroke_theme_5"
                android:layout_marginLeft="@dimen/dp_180"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/app_theme"
                android:text="编辑"/>
            <TextView
                android:id="@+id/item_address_tv_delete"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:background="@drawable/stroke_zise_5"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="删除"/>
        </LinearLayout>
</LinearLayout>
