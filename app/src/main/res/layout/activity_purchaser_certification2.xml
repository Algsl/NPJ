<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.zthx.npj.ui.PurchaserCertification2Activity">

    <include
        layout="@layout/title"></include>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_13">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="基本信息"
                   android:gravity="center_horizontal"
                   android:textColor="@color/text6"
                   android:textSize="@dimen/sp_14"/>
               <View
                   android:layout_width="@dimen/dp_199"
                   android:layout_centerInParent="true"
                   android:layout_height="@dimen/dp_1"
                   android:background="@drawable/trust_text_bg"></View>
           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"
               android:layout_marginTop="@dimen/dp_10"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="姓名"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <EditText
                   android:id="@+id/at_purchaser_certification2_et_name"
                   android:layout_width="0dp"
                   android:layout_weight="3.5"
                   android:layout_height="match_parent"
                   android:background="@android:color/white"
                   android:hint="请填写您的真实姓名"
                   android:textColorHint="@color/text6"
                   android:textSize="@dimen/sp_12"
                   android:textColor="@color/text6"
                   android:paddingLeft="@dimen/dp_15"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="手机"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3.5">
                   <EditText
                       android:id="@+id/at_purchaser_certification2_et_mobile"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:hint="12345675214"
                       android:textColorHint="@color/text6"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>

                   <TextView
                       android:layout_width="@dimen/dp_55"
                       android:layout_height="@dimen/dp_20"
                       android:layout_centerVertical="true"
                       android:text="已验证"
                       android:textColor="@color/app_theme"
                       android:textSize="@dimen/sp_12"
                       android:gravity="center"
                       android:background="@drawable/stroke_app_theme"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_12"/>
               </RelativeLayout>

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="身份"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="3.5"
                   android:id="@+id/at_purchaser_certification2_et_id"
                   android:layout_height="match_parent"
                   android:background="@android:color/white"
                   android:text="请选择采购商身份"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/sp_12"
                   android:textColor="@color/text6"
                   android:paddingLeft="@dimen/dp_15"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_13">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="身份信息"
                   android:gravity="center_horizontal"
                   android:textColor="@color/text6"
                   android:textSize="@dimen/sp_14"/>
               <View
                   android:layout_width="@dimen/dp_199"
                   android:layout_centerInParent="true"
                   android:layout_height="@dimen/dp_1"
                   android:background="@drawable/trust_text_bg"></View>
           </RelativeLayout>

           <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/at_purchaser_certification2_ll_name"
             android:orientation="vertical">
             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_1"
                 android:background="#cccccc"
                 android:layout_marginTop="@dimen/dp_10"></View>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_40"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">
                 <TextView
                     android:layout_width="@dimen/dp_0"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:text="企业名称"
                     android:textColor="@color/text3"
                     android:textSize="@dimen/sp_13"
                     android:gravity="center"
                     android:background="@color/background"/>

                 <EditText
                     android:id="@+id/at_purchaser_certification2_et_company_name"
                     android:layout_width="0dp"
                     android:layout_weight="3.5"
                     android:layout_height="match_parent"
                     android:background="@android:color/white"
                     android:hint="请填写企业名称"
                     android:textColorHint="@color/text6"
                     android:textSize="@dimen/sp_12"
                     android:textColor="@color/text6"
                     android:paddingLeft="@dimen/dp_15"/>
             </LinearLayout>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_1"
                 android:background="#cccccc"></View>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_40"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">
                 <TextView
                     android:layout_width="@dimen/dp_0"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:text="所在地"
                     android:textColor="@color/text3"
                     android:textSize="@dimen/sp_13"
                     android:gravity="center"
                     android:background="@color/background"/>

                 <RelativeLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="3.5">
                     <EditText
                         android:id="@+id/at_purchaser_certification2_et_address"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="@android:color/white"
                         android:hint="请选择企业所在地"
                         android:textColorHint="@color/text6"
                         android:textSize="@dimen/sp_12"
                         android:textColor="@color/text6"
                         android:paddingLeft="@dimen/dp_15"/>

                     <ImageView
                         android:layout_width="@dimen/dp_7"
                         android:layout_height="@dimen/dp_12"
                         android:layout_centerVertical="true"
                         android:src="@drawable/mine_dingdan_go"
                         android:layout_alignParentRight="true"
                         android:layout_marginRight="@dimen/dp_12"/>
                 </RelativeLayout>

             </LinearLayout>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/at_purchaser_certification2_ll_dangkou"
               android:visibility="visible"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_1"
                   android:background="#cccccc"
                   android:layout_marginTop="@dimen/dp_10"></View>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_40"
                   android:orientation="horizontal"
                   android:gravity="center_vertical">
                   <TextView
                       android:layout_width="@dimen/dp_0"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:text="档口名称"
                       android:textColor="@color/text3"
                       android:textSize="@dimen/sp_13"
                       android:gravity="center"
                       android:background="@color/background"/>

                   <EditText
                       android:id="@+id/at_purchaser_certification2_et_dangkou_name"
                       android:layout_width="0dp"
                       android:layout_weight="3.5"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:hint="请填写档口名称"
                       android:textColorHint="@color/text6"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_1"
                   android:background="#cccccc"></View>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_40"
                   android:orientation="horizontal"
                   android:gravity="center_vertical">
                   <TextView
                       android:layout_width="@dimen/dp_0"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:text="所在市场"
                       android:textColor="@color/text3"
                       android:textSize="@dimen/sp_13"
                       android:gravity="center"
                       android:background="@color/background"/>

                   <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3.5">
                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@android:color/white"
                           android:hint="请选择市场所在地"
                           android:id="@+id/at_purchaser_certification2_et_shichang_name"
                           android:textColorHint="@color/text6"
                           android:textSize="@dimen/sp_12"
                           android:textColor="@color/text6"
                           android:paddingLeft="@dimen/dp_15"/>

                       <ImageView
                           android:layout_width="@dimen/dp_7"
                           android:layout_height="@dimen/dp_12"
                           android:layout_centerVertical="true"
                           android:src="@drawable/mine_dingdan_go"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/dp_12"/>
                   </RelativeLayout>

               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_1"
                   android:background="#cccccc"></View>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_40"
                   android:orientation="horizontal"
                   android:gravity="center_vertical">
                   <TextView
                       android:layout_width="@dimen/dp_0"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:text="详细地址"
                       android:textColor="@color/text3"
                       android:textSize="@dimen/sp_13"
                       android:gravity="center"
                       android:background="@color/background"/>

                   <EditText
                       android:id="@+id/at_purchaser_certification2_et_dangkou_address"
                       android:layout_width="0dp"
                       android:layout_weight="3.5"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:textColorHint="@color/text6"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_1"
                   android:background="#cccccc"></View>
           </LinearLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_13">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="图片资料"
                   android:gravity="center_horizontal"
                   android:textColor="@color/text6"
                   android:textSize="@dimen/sp_14"/>
               <View
                   android:layout_width="@dimen/dp_199"
                   android:layout_centerInParent="true"
                   android:layout_height="@dimen/dp_1"
                   android:background="@drawable/trust_text_bg"></View>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"
               android:layout_marginTop="@dimen/dp_10"></View>
           <TextView
               android:id="@+id/at_purchaser_certification2_tv_tuijian"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="推荐使用营业执照进行认证"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginLeft="@dimen/dp_12"
               android:textSize="@dimen/sp_15"
               android:textColor="@color/text3"/>

           <LinearLayout
               android:visibility="visible"
               android:id="@+id/at_purchaser_certification2_ll_dangkou_pic"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="@dimen/dp_12">
               <RelativeLayout
                   android:id="@+id/at_purchaser_certification2_rl_pic"
                   android:layout_width="@dimen/dp_140"
                   android:layout_height="@dimen/dp_160"
                   android:layout_marginTop="@dimen/dp_12"
                   android:background="@drawable/ic_launcher_foreground">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="样图"
                       android:textColor="#E27408"
                       android:textSize="@dimen/sp_24"
                       android:layout_centerInParent="true"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_25"
                       android:layout_alignParentBottom="true"
                       android:background="@android:color/black"
                       android:alpha="0.4"
                       android:gravity="center">
                       <TextView
                           android:id="@+id/at_purchaser_certification2_tv_dianjishangchuan"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="点击上传营业执照"
                           android:textSize="@dimen/sp_12"
                           android:textColor="@android:color/white"/>
                   </LinearLayout>
               </RelativeLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/dp_16"
                   android:text="1.营业执照需盖红章和企业名称清晰可见
2.使用附近件需加盖公司红章
3.建议图片上传完毕后检查能否看清字体通过更有把握"
                   android:layout_marginLeft="@dimen/dp_16"
                   android:layout_marginTop="@dimen/dp_5"/>
           </LinearLayout>

           <RelativeLayout
               android:visibility="gone"
               android:id="@+id/at_purchaser_certification2_rl_fei_dangkou_pic"
               android:layout_width="@dimen/dp_250"
               android:layout_height="@dimen/dp_160"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/dp_13"
               android:background="@drawable/pic_heng_bg">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="上传营业执照"
                   android:textSize="@dimen/sp_14"
                   android:textColor="@color/text3"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="@dimen/dp_33"/>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"
               android:layout_marginTop="@dimen/dp_15"></View>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="您也可以选择以下方式"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginLeft="@dimen/dp_12"
               android:textSize="@dimen/sp_15"
               android:textColor="@color/text3"/>
           <TextView
               android:id="@+id/at_purchaser_certification2_tv_dangkou_pic"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:layout_marginTop="@dimen/dp_10"
               android:background="@android:color/white"
               android:text="上传档口照片"
               android:textColor="@color/text3"
               android:textSize="@dimen/sp_15"
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/dp_12"/>

           <TextView
               android:id="@+id/at_purchaser_certification2_tv_dangkou_id_card"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:layout_marginTop="@dimen/dp_10"
               android:background="@android:color/white"
               android:text="上传名片或工牌"
               android:textColor="@color/text3"
               android:textSize="@dimen/sp_15"
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/dp_12"/>

           <Button
               android:id="@+id/at_purchaser_certification2_btn_confirm"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:background="@color/app_theme"
               android:text="确认提交"
               android:textSize="@dimen/sp_15"
               android:layout_marginTop="@dimen/dp_60"
               android:textColor="@android:color/white"/>

       </LinearLayout>
   </ScrollView>
</LinearLayout>
