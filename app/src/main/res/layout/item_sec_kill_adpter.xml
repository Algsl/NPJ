<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/item_secKill_ll"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_sec_kill_iv_goods_pic"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"
            app:riv_corner_radius="@dimen/dp_5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sec_kill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_secKill_ll"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_sec_kill_tv_goods_leb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿色无污染除草剂"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text6"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/item_sec_kill_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/3/12"
                android:textSize="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/item_sec_kill_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"
            android:text="前1000份1元限时抢购"
            android:maxLines="1"/>
        
        <com.zthx.npj.view.SaleProgressView
            android:id="@+id/item_sec_kill_spv"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            app:nearOverText="即将售罄"
            app:overText="已售罄"/>
        <TextView
            android:id="@+id/item_sec_kill_tv_num"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/app_theme"
            android:layout_marginTop="@dimen/dp_5"
            android:text="抢购份：120份"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_sec_kill_ll_l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_toRightOf="@id/item_secKill_ll"
        android:layout_marginLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/item_sec_kill_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/app_theme" />

        <TextView
            android:id="@+id/item_sec_kill_tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥288"
            android:textColor="@color/text9"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_30"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_sec_kill_ll_l2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_toRightOf="@id/item_secKill_ll"
        android:layout_marginLeft="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离开场时间："
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text9" />
        <com.zthx.npj.view.TimeTextView
            android:id="@+id/item_sec_kill_tv_timeWill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="02:31:18"/>
    </LinearLayout>

    <Button
        android:id="@+id/item_sec_kill_btn_buy"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_11"
        android:text="马上抢"
        android:background="@drawable/buton_stroke_theme"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/app_theme"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_list"/>
</RelativeLayout>