<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_145"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95">

        <ImageView
            android:id="@+id/item_supply_manager_list_pic"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"/>

        <TextView
            android:id="@+id/item_supply_manager_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杀虫剂100g"
            android:textColor="@color/text3"
            android:layout_toRightOf="@id/item_supply_manager_list_pic"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/item_supply_manager_list_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市场价：1000"
            android:textSize="@dimen/sp_13"
            android:layout_below="@id/item_supply_manager_list_title"
            android:layout_alignLeft="@id/item_supply_manager_list_title"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/app_theme"/>

        <TextView
            android:id="@+id/item_supply_manager_list_member_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员价：600"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_13"
            android:layout_alignTop="@id/item_supply_manager_list_market_price"
            android:layout_toRightOf="@id/item_supply_manager_list_market_price"
            android:layout_marginLeft="@dimen/dp_50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销量：1502"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            android:layout_below="@id/item_supply_manager_list_market_price"
            android:layout_alignLeft="@id/item_supply_manager_list_market_price"
            android:id="@+id/item_supply_manager_list_sell_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存：522"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            android:layout_alignLeft="@id/item_supply_manager_list_member_price"
            android:layout_below="@id/item_supply_manager_list_member_price"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_theme_2"
            android:text="编辑"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_32"/>
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_theme_2"
            android:text="分享"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"/>
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_gray_2"
            android:text="下架"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"/>
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stroke_gray_2"
            android:text="编辑"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_32"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/background"></View>

</LinearLayout>