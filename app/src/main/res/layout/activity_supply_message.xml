                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请选择规格"
                        android:background="@null"
                        android:layout_toRightOf="@id/qgtext2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/text9"
                        android:textSize="@dimen/sp_13"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/background"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:layout_marginRight="@dimen/dp_12"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12">
                    <TextView
                        android:id="@+id/qgtext3"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:text="采购数量"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/text3"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:id="@+id/at_qg_message_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请选择采购数量"
                        android:background="@null"
                        android:layout_toRightOf="@id/qgtext3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/text9"
                        android:textSize="@dimen/sp_13"/>

