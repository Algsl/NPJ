                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:text="供应地址"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/text3"
                        android:layout_centerVertical="true"/>
