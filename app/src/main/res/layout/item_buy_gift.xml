<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12">
    
    <ImageView
        android:id="@+id/item_buy_gift_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/white_conner"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/item_buy_gift_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手工蛋黄酥纯手工制作新加坡美作蛋糕"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text3"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/item_buy_gift_tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买礼包升级为代言人"
        android:textColor="@color/text9"
        android:textSize="@dimen/sp_13"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_buy_gift_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1299"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/app_theme"/>

        <Button
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:background="@color/app_theme"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>

</LinearLayout>