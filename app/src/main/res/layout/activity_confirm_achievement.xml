<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConfirmAchievementActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/app_theme">
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/white_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的申请"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/dp_63"
        android:layout_height="@dimen/dp_63"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="河南农品街网络科技有限公司"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/app_theme"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎您申请成为农品街城市代言人,坚持“以人为本、会员第一”的服务理念，时刻关注会员的切身利益。
   农品街将回归初心，精准锁定新中产人群，为其提供优质的产品及服务。从而成为一家“有品牌、有品质、有品位的平台”。在平台的商业模式上农品街也将做出重大调整，成为一个更加受人欢迎的平台。
    "
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_7"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_33"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@drawable/theme_conner_5"
        android:text="确认申请"
        android:textSize="@dimen/sp_15"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dp_50"/>
</LinearLayout>