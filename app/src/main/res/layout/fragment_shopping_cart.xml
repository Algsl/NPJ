                <!--android:layout_height="match_parent" />-->
                <!--<TextView-->
                <!--android:id="@+id/collect_goods"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:gravity="center"-->
                <!--android:text="移到收藏夹"-->
                <!--android:layout_weight="0.3"-->
