                <!--android:id="@+id/del_goods"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:gravity="center"-->
                <!--android:text="删除"-->
                <!--android:layout_weight="0.3"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>