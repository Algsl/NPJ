                <!--android:id="@+id/share_goods"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:background="@color/ic_yellow"-->
                <!--android:gravity="center"-->
                <!--android:text="分享宝贝"-->
                <!--android:layout_weight="0.3"-->
