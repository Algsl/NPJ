<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.VideoBuyConfirmActivity"
    android:background="@android:color/white">
    <include layout="@layout/title"
        android:id="@+id/at_video_buy_confirm_rl_title"/>
    <ScrollView
        android:layout_below="@id/at_video_buy_confirm_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_59">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="购买账号"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/at_video_buy_confirm_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="哇唧唧哇"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_15"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_115">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/at_video_buy_confirm_img"
                        android:layout_width="@dimen/dp_95"
                        android:layout_height="@dimen/dp_95"
                        android:src="@drawable/logo"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="@dimen/dp_12"
                        app:riv_corner_radius="@dimen/dp_5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/at_video_buy_confirm_img"
                        android:layout_marginLeft="@dimen/dp_10">

                        <TextView
                            android:id="@+id/at_video_buy_confirm_tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="系统提升种植能力五部曲"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/dp_13"/>

                        <TextView
                            android:id="@+id/at_video_buy_confirm_tv_teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主讲：张宇房"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text6"
                            android:layout_marginTop="@dimen/dp_8"/>
                        <TextView
                            android:id="@+id/at_video_buy_confirm_tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型：疑难杂症"
                            android:textColor="@color/text6"
                            android:textSize="@dimen/sp_13"
                            android:layout_marginTop="@dimen/dp_4"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="售价："
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/text6"/>
                            <TextView
                                android:id="@+id/at_video_buy_confirm_tv_sale_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥1225"
                                android:textStyle="bold"
                                android:textColor="@color/app_theme"
                                android:textSize="@dimen/sp_13"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/background"
                        android:layout_alignParentBottom="true"></View>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10">
                    <View
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="@dimen/dp_11"
                        android:background="@color/app_theme"
                        android:layout_marginLeft="@dimen/dp_12"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买须知"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginLeft="@dimen/dp_9"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本视频课程为农业专家精品课程专辑，视频将在完成录制后持续更新到本应用中，购买后，您将获得本课程专辑的视频观看权限（包括当前及后续视频），本商品属技术学习资料，一经购买，不再享有退换权益。"
                    android:textSize="@dimen/sp_12"
                    android:lineHeight="@dimen/dp_16"
                    android:textColor="@color/text6"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/background"
                android:layout_marginTop="@dimen/dp_10"></View>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择支付方式"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_video_buy_confirm_iv_my_col"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_collect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钱包"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_video_buy_confirm_iv_my_col"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:id="@+id/ac_videoBuyConfirm_iv_payType3"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/confirm_unselect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_video_buy_confirm_iv_my_wechat"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_wechat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_video_buy_confirm_iv_my_wechat"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:id="@+id/ac_videoBuyConfirm_iv_payType2"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/confirm_select"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:id="@+id/at_video_buy_confirm_iv_alipay"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:src="@drawable/confirm_alipay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/at_video_buy_confirm_iv_alipay"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:id="@+id/ac_videoBuyConfirm_iv_payType1"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/confirm_unselect"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:focusable="true">
                <EditText
                    android:id="@+id/ac_videoBuyConfirm_et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/gray_conner"
                    android:hint="买家留言200字以内（选填）"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_13"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/at_video_buy_confirm_tv_jin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际支付金额："
            android:layout_centerVertical="true"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_89"/>
        <TextView
            android:id="@+id/at_video_buy_confirm_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/at_video_buy_confirm_tv_jin"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_2"
            android:textStyle="bold"
            android:text="￥220"/>

        <Button
            android:id="@+id/at_video_buy_confirm_btn_pay"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/app_theme"
            android:text="支付订单"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>