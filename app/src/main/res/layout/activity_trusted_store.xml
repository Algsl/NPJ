<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.TrustedStoreActivity">
    <include
        layout="@layout/title"
        android:id="@+id/title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_below="@id/title">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:visibility="visible"
                    android:src="@drawable/trust_trust"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_13">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="认证后您将获得以下权益"
                        android:gravity="center_horizontal"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/sp_14"/>
                    <View
                        android:layout_width="@dimen/dp_271"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/dp_1"
                        android:background="@drawable/trust_text_bg"></View>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_30">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/baozhang"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="平台保障"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/liuliang"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="流量扶持"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/zizhirenzheng"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特殊标识"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/zuanshi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活动优先"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/dp_20"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="@dimen/dp_4"
                            android:layout_height="@dimen/sp_15"
                            android:background="@color/app_theme"
                            android:layout_marginLeft="@dimen/dp_12"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="认证须知"
                            android:textColor="@color/text3"
                            android:layout_marginLeft="@dimen/dp_10"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.完成实人认证和企业认证"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_14"
                        android:text="2.缴纳保证金2000元起，保证金越多，保障力越强"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_14"
                        android:text="3.投诉率高于20%，店铺将会被强制下线"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/at_trust_store_ll_baozhengjin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_15">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/background"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_28"
                                android:layout_height="@dimen/dp_28"
                                android:src="@drawable/baozhengjin"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_12"/>
                            <TextView
                                android:id="@+id/at_trust_store_tv_baozhengjin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="您的当前保证金为3000元"
                                android:textColor="#E4633B"
                                android:textSize="@dimen/sp_16"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_20"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/ac_trustedStore_tv_apply"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="申请退款"
                                    android:paddingTop="@dimen/dp_5"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_5"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_12"
                                    android:textColor="@color/app_theme"
                                    android:textSize="@dimen/sp_13"
                                    android:background="@drawable/gray_conner"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ac_trustedStore_rv"
                            android:layout_marginBottom="@dimen/dp_60"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/background"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:id="@+id/at_trust_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击即表示同意"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《农品街平台认证协议》"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/app_theme"
            />
    </LinearLayout>
    
    <Button
        android:id="@+id/at_trust_store_btn_attestation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/at_trust_bottom"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/theme_conner_5"
        android:text="开始认证"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"/>

</RelativeLayout>
