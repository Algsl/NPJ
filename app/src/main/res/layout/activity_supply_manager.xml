<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.SupplyManagerActivity"
    android:orientation="vertical">

    <include
        layout="@layout/title_theme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/dp_231"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/stroke_app_theme"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ac_supplyManager_tv_supply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_3"
                android:textColor="@android:color/white"
                android:text="供应列表"
                android:textSize="@dimen/sp_16"
                android:background="@color/app_theme"
                android:gravity="center"/>
            <TextView
                android:id="@+id/ac_supplyManager_tv_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_3"
                android:textColor="@color/text3"
                android:text="供应订单"
                android:textSize="@dimen/sp_16"
                android:background="@android:color/white"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/at_supply_manager_ll_supply_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_10">
                <TextView
                    android:id="@+id/ac_supplyManager_tv_up"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="出售中"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/app_theme"/>
                <TextView
                    android:id="@+id/ac_supplyManager_tv_down"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="已下架"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>
            </LinearLayout>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/at_supply_manager_rv_supply_list1"
                    android:background="@color/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/at_supply_manager_rv_supply_list2"
                    android:background="@color/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/at_supply_manager_ll_supply_bill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/at_supply_manager_rv_supply_bill"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
