<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_170"
    android:layout_height="@dimen/dp_245"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_21"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_iv_comment_goods"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_height="@dimen/dp_171"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_tv_comment_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_game"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/text3"
        android:textSize="@dimen/sp_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5">

        <TextView
            android:id="@+id/item_tv_comment_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥188"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_theme"/>

        <TextView
            android:id="@+id/item_tv_comment_goods_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text6"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="已售 200"/>

    </RelativeLayout>

</LinearLayout>