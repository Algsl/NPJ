<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_114">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_alignParentBottom="true"></View>
    <ImageView
        android:id="@+id/item_discover_need_pic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/item_discover_need_pic"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_discover_need_tv_isTop"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_18"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/theme_conner_5"
                android:text="置顶"/>
            <TextView
                android:id="@+id/item_discover_need_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【采购】大型超市急需新鲜脐橙2000斤，有意请联系"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/sp_12"
                android:maxLines="2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业保证"
                android:textSize="@dimen/sp_11"
                android:textColor="@android:color/white"
                android:background="#F39B1F"
                android:paddingRight="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家认证"
                android:textSize="@dimen/sp_11"
                android:textColor="@android:color/white"
                android:background="#EB6877"
                android:paddingRight="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_discover_need_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/item_discover_need_tv_caigou_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="采购量："
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/item_discover_need_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000斤 "
                android:textStyle="bold"
                android:layout_toRightOf="@id/item_discover_need_tv_caigou_num"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/item_discover_need_tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3分钟前在线"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/app_theme"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/item_discover_need_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.5km"
        android:textColor="@color/text6"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_30"/>
</RelativeLayout>