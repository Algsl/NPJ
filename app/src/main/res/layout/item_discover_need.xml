<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_114"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@drawable/white_conner_5">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_discover_need_pic"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            app:riv_corner_radius="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/item_storeQuotation_iv_video"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_30"
            android:src="@drawable/item_play"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ll"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_discover_need_tv_isTop"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_18"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/theme_conner_5"
                android:text="置顶"
                android:layout_marginRight="@dimen/dp_5"/>
            <TextView
                android:id="@+id/item_discover_need_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【采购】大型超市急需新鲜脐橙2000斤，有意请联系"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/sp_12"
                android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_discoverNeed_ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="@dimen/dp_4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_discoverNeed_tv_realName"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="实名认证"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@android:color/white"
                    android:background="#FED435"
                    android:layout_marginRight="@dimen/dp_10"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_discoverNeed_tv_purchase"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="wrap_content"
                    android:text="采购认证"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@android:color/white"
                    android:background="#9685ED"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_discoverNeed_tv_zizhi"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="wrap_content"
                    android:text="资质认证"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@android:color/white"
                    android:background="#62DD57"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_3">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_discoverNeed_tv_enterPrice"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="wrap_content"
                    android:text="企业认证"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@android:color/white"
                    android:background="#5AAFFA"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_discoverNeed_tv_trust"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="wrap_content"
                    android:text="诚信认证"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@android:color/white"
                    android:background="#EA6E6D"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_discover_need_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3">
            <TextView
                android:id="@+id/item_discover_need_tv_caigou_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="采购量："
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/item_discover_need_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000斤 "
                android:textStyle="bold"
                android:layout_toRightOf="@id/item_discover_need_tv_caigou_num"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/item_discover_need_tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="3分钟前在线"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/app_theme"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/item_discover_need_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5km"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>