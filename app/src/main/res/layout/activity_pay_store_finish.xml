<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_theme"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="支付成功"/>
                <ImageView
                    android:id="@+id/ac_payStore_iv_storeImg"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_35"
                    android:src="@drawable/logo"/>
                <TextView
                    android:id="@+id/ac_payStore_tv_storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="一品极光世界商贸"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_18"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/ac_payStore_tv_payMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_23"
                        android:text="300.00元"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="我的评价"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_15"
                        android:text="店铺描述"/>
                    <RatingBar
                        android:id="@+id/ac_payStore_rb_rb1"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="5"
                        style="@style/roomRatingBar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_15"
                        android:text="服务态度"/>
                    <RatingBar
                        android:id="@+id/ac_payStore_rb_rb2"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="5"
                        style="@style/roomRatingBar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_15"
                        android:text="周围环境"/>
                    <RatingBar
                        android:id="@+id/ac_payStore_rb_rb3"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="5"
                        style="@style/roomRatingBar"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/stroke_gray_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">
                    <EditText
                        android:maxLength="200"
                        android:gravity="top"
                        android:id="@+id/ac_payStore_et_desc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:hint="请填写您的评价"
                        android:background="@null"/>
                    <TextView
                        android:id="@+id/ac_payStore_tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text9"
                        android:text="0/200"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/ac_payStore_tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="提交"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/theme_conner_5"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>