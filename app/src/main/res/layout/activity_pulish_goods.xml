<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zthx.npj.ui.PublishGoodsActivity"
    android:orientation="vertical">

    <include
        layout="@layout/title_theme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>

                <EditText
                    android:id="@+id/ac_pulishGoods_et_goodsName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入商品名称"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品简介"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>

                <EditText
                    android:id="@+id/ac_pulishGoods_et_goodsDesc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请对商品进行描述"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/at_publish_goods_ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品图片"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（不超过五张）"
                        android:textColorHint="@color/text9"
                        android:textSize="@dimen/sp_13"/>
                </LinearLayout>
                <me.zhouzhuo.zzimagebox.ZzImageBox
                    android:id="@+id/ac_pulishGoods_iv_goodsImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    app:zib_left_margin="@dimen/dp_12"
                    app:zib_right_margin="@dimen/dp_12"
                    app:zib_img_padding="@dimen/dp_10"
                    app:zib_img_size_one_line="4"
                    app:zib_max_line="2"
                    app:zib_img_deletable="true"
                    app:zib_img_add="@drawable/iv_add"
                    app:zib_img_default="@drawable/iv_default"
                    app:zib_img_delete="@drawable/iv_delete"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_13"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/at_publish_goods_ll_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品详情"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（不超过十张）"
                        android:textColorHint="@color/text9"
                        android:textSize="@dimen/sp_13"/>
                </LinearLayout>
                <me.zhouzhuo.zzimagebox.ZzImageBox
                    android:id="@+id/ac_pulishGoods_iv_goodsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    app:zib_left_margin="@dimen/dp_12"
                    app:zib_right_margin="@dimen/dp_12"
                    app:zib_img_padding="@dimen/dp_10"
                    app:zib_img_size_one_line="4"
                    app:zib_max_line="5"
                    app:zib_img_deletable="true"
                    app:zib_img_add="@drawable/iv_add"
                    app:zib_img_default="@drawable/iv_default"
                    app:zib_img_delete="@drawable/iv_delete"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_13"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台结算价"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/ac_pulishGoods_et_platformPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写平台结算价格"
                    android:layout_toRightOf="@id/publish_goods_1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
                <ImageView
                    android:id="@+id/ac_publishGoods_iv_hint1"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP代言人价"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/ac_pulishGoods_et_memberPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写VIP会员价格"
                    android:layout_toRightOf="@id/publish_goods_2"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:id="@+id/ac_publishGoods_iv_hint2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市场参考价"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/ac_pulishGoods_et_marketPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写市场参考价格"
                    android:layout_toRightOf="@id/publish_goods_3"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:id="@+id/ac_publishGoods_iv_hint3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>

                <EditText
                    android:inputType="number"
                    android:id="@+id/ac_pulishGoods_et_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写供应数量"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:id="@+id/ac_pulishGoods_rl_cateId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/ac_pulishGoods_tv_cateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择，特殊类别须提供专业认证后可发布"
                    android:layout_toRightOf="@id/publish_goods_4"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/goods_detail_select"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/ac_pulishGoods_et_isFreeShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="包邮"
                    android:layout_toLeftOf="@id/ac_publishGoods_iv_hint4"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColorHint="@color/text3"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:id="@+id/ac_publishGoods_iv_hint4"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:id="@+id/ac_pulishGoods_rl_goodsType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品显示类型"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/ac_pulishGoods_tv_goodsType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:layout_toRightOf="@id/publish_goods_6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/goods_detail_select"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店长推荐"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/at_publishGoods_iv_isTuiJian"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_27"
                    android:src="@drawable/at_edit_address_not_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"/>
            <Button
                android:id="@+id/ac_pulishGoods_btn_pulish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/theme_conner_5"
                android:text="发布"
                android:textSize="@dimen/sp_13"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/dp_40"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
