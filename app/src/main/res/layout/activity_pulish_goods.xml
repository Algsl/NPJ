<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.PublishGoodsActivity"
    android:orientation="vertical">

    <include
        layout="@layout/title_theme"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入商品名称"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品简介"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请对商品进行描述"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/at_publish_goods_ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品图片"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（不超过五张）"
                        android:textColorHint="@color/text9"
                        android:textSize="@dimen/sp_13"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:src="@mipmap/ic_launcher"
                    android:layout_below="@id/at_publish_goods_ll_3"
                    android:layout_marginLeft="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_13"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/at_publish_goods_ll_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品详情"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（不超过十张）"
                        android:textColorHint="@color/text9"
                        android:textSize="@dimen/sp_13"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:src="@mipmap/ic_launcher"
                    android:layout_below="@id/at_publish_goods_ll_4"
                    android:layout_marginLeft="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_13"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台结算价"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写平台结算价格"
                    android:layout_toRightOf="@id/publish_goods_1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP代言人价"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写VIP会员价格"
                    android:layout_toRightOf="@id/publish_goods_2"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市场参考价"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写市场参考价格"
                    android:layout_toRightOf="@id/publish_goods_3"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写供应数量"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColorHint="@color/text9"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择，特殊类别须提供专业认证后可发布"
                    android:layout_toRightOf="@id/publish_goods_4"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/gogoogogo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="包邮"
                    android:layout_toLeftOf="@id/publish_goods_iv"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColorHint="@color/text3"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:id="@+id/publish_goods_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/help"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11">
                <TextView
                    android:id="@+id/publish_goods_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品显示类型"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text3"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:layout_toRightOf="@id/publish_goods_6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text9"
                    android:textSize="@dimen/sp_13"/>

                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/gogoogogo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"></View>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/theme_conner_5"
                android:text="发布"
                android:textSize="@dimen/sp_13"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/dp_40"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
