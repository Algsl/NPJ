<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <!--<include layout="@layout/title_theme"
        android:id="@+id/ac_title"/>-->
    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/superior"
        android:layout_below="@id/ac_title"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30">
            <ImageView
                android:id="@+id/title_theme_back"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:onClick="click"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:src="@drawable/white_back"/>
            <TextView
                android:id="@+id/title_theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_18"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <com.zthx.npj.view.MyCircleView
            android:id="@+id/ac_referrer_mcv_headImg"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/ac_referrer_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代言人"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_5"/>
        <TextView
            android:id="@+id/ac_referrer_tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闭眼看世界"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_240"
        android:orientation="vertical"
        android:background="@drawable/white_conner_5">
        <TextView
            android:id="@+id/ac_referrer_tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_23"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text3"
            android:layout_gravity="center"
            android:text="手机号：18435224024"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ac_referrer_tv_chat"
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"
                android:background="@color/app_theme"
                android:text="联系"/>
            <TextView
                android:id="@+id/ac_referrer_tv_change"
                android:textColor="@color/white"
                android:background="@color/line"
                android:textSize="@dimen/sp_15"
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:text="修改"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>