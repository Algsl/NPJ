<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zthx.npj.ui.EnterpriseCertification2Activity">
    <include layout="@layout/title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_50"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#cccccc"
                    android:layout_marginTop="@dimen/dp_10"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="实人姓名"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"
                        android:gravity="center"
                        android:background="@color/background"/>

                    <TextView
                        android:id="@+id/at_zizhi_tv_realName"
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:hint="请按照营业执照上的名字填写"
                        android:textColorHint="@color/text6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/text6"
                        android:paddingLeft="@dimen/dp_15"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#cccccc"
                    android:layout_marginTop="@dimen/dp_1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="联系电话"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"
                        android:gravity="center"
                        android:background="@color/background"/>

                    <TextView
                        android:id="@+id/at_zizhi_tv_mobile"
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:hint="请按照营业执照上的名字填写"
                        android:textColorHint="@color/text6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/text6"
                        android:paddingLeft="@dimen/dp_15"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#cccccc"
                    android:layout_marginTop="@dimen/dp_1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="企业全称"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"
                        android:gravity="center"
                        android:background="@color/background"/>

                    <EditText
                        android:id="@+id/at_zizhi_et_name"
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:hint="请按照营业执照上的名字填写"
                        android:textColorHint="@color/text6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/text6"
                        android:paddingLeft="@dimen/dp_15"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#cccccc"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="资质类型"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"
                        android:gravity="center"
                        android:background="@color/background"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">
                        <TextView
                            android:id="@+id/at_zizhi_tv_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:hint="请选择资质类型"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/text6"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text6"
                            android:paddingLeft="@dimen/dp_15"/>

                        <ImageView
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_12"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:background="@drawable/mine_dingdan_go"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_12"/>
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#cccccc"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照上传"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"/>

                <LinearLayout
                    android:id="@+id/at_zizhi_ll_zizhipic"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_130"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/pic_heng_bg"
                    android:layout_marginTop="@dimen/dp_23"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业执照"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_75"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请上传营业执照图片"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证资料上传"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"/>

                <LinearLayout
                    android:id="@+id/at_zizhi_ll_zizhipic1"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_130"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/pic_heng_bg"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资质证书"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_75"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请上传经营许可资质证书"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/at_zizhi_ll_zizhipic2"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_130"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/pic_heng_bg"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资质证书"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_75"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请上传经营许可资质证书"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text6"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <Button
            android:id="@+id/at_zizhi_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/app_theme"
            android:layout_alignParentBottom="true"
            android:text="确认提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>
</LinearLayout>
