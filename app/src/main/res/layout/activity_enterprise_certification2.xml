<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zthx.npj.ui.EnterpriseCertification2Activity">

    <include
        layout="@layout/title"></include>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"
               android:layout_marginTop="@dimen/dp_10"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="企业全称"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <EditText
                   android:id="@+id/at_enterprise_certification2_et_name"
                   android:layout_width="0dp"
                   android:layout_weight="3.5"
                   android:layout_height="match_parent"
                   android:background="@android:color/white"
                   android:hint="请按照营业执照上的名字填写"
                   android:textColorHint="@color/text6"
                   android:textSize="@dimen/sp_12"
                   android:textColor="@color/text6"
                   android:paddingLeft="@dimen/dp_15"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="企业简介"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <EditText
                   android:id="@+id/at_enterprise_certification2_et_des"
                   android:layout_width="0dp"
                   android:layout_weight="3.5"
                   android:layout_height="match_parent"
                   android:background="@android:color/white"
                   android:hint="将展示在您的名片页"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/sp_12"
                   android:textColorHint="@color/text6"
                   android:paddingLeft="@dimen/dp_15"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="企业类型"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3.5">
                   <EditText
                       android:id="@+id/at_enterprise_certification2_et_type"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:hint="请选择企业类型"
                       android:textColorHint="@color/text6"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>

                   <ImageView
                       android:layout_width="@dimen/dp_7"
                       android:layout_height="@dimen/dp_12"
                       android:layout_centerVertical="true"
                       android:gravity="center"
                       android:background="@drawable/mine_dingdan_go"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_12"/>
               </RelativeLayout>

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="企业资料上传"
               android:textSize="@dimen/sp_16"
               android:textColor="@color/text3"
               android:layout_marginLeft="@dimen/dp_12"
               android:layout_marginTop="@dimen/dp_12"/>

           <LinearLayout
               android:id="@+id/at_enterprise_certification2_ll_company_pic"
               android:layout_width="@dimen/dp_250"
               android:layout_height="@dimen/dp_130"
               android:orientation="vertical"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/pic_heng_bg"
               android:layout_marginTop="@dimen/dp_23"
               android:gravity="center_horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="营业执照"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginTop="@dimen/dp_75"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="请上传原件且填写一致"
                   android:textSize="@dimen/sp_13"
                   android:textColor="@color/text6"/>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/at_enterprise_certification2_ll_shouquan"
               android:layout_width="@dimen/dp_250"
               android:layout_height="@dimen/dp_130"
               android:orientation="vertical"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/pic_heng_bg"
               android:layout_marginTop="@dimen/dp_10"
               android:gravity="center_horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="营业执照"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginTop="@dimen/dp_75"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="请上传原件且填写一致"
                   android:textSize="@dimen/sp_13"
                   android:textColor="@color/text6"/>
           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"
               android:layout_marginTop="@dimen/dp_21"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="经营者"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3.5">
                   <TextView
                       android:id="@+id/at_enterprise_certification2_tv_personname"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:text="张馨予"
                       android:gravity="center_vertical"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>

                   <ImageView
                       android:id="@+id/at_enterprise_certification2_tv_phone"
                       android:layout_width="@dimen/dp_13"
                       android:layout_height="@dimen/dp_13"
                       android:layout_centerVertical="true"
                       android:gravity="center"
                       android:background="@drawable/suo"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_12"/>
               </RelativeLayout>

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="手机号"
                   android:textColor="@color/text3"
                   android:textSize="@dimen/sp_13"
                   android:gravity="center"
                   android:background="@color/background"/>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3.5">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@android:color/white"
                       android:text="159****1525"
                       android:gravity="center_vertical"
                       android:textSize="@dimen/sp_12"
                       android:textColor="@color/text6"
                       android:paddingLeft="@dimen/dp_15"/>

                   <ImageView
                       android:layout_width="@dimen/dp_13"
                       android:layout_height="@dimen/dp_13"
                       android:layout_centerVertical="true"
                       android:gravity="center"
                       android:background="@drawable/suo"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_12"/>
               </RelativeLayout>

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#cccccc"></View>

           <Button
               android:id="@+id/at_enterprise_certification2_btn_confirm"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:background="@color/app_theme"
               android:layout_marginTop="@dimen/dp_21"
               android:text="确认提交"
               android:textColor="@android:color/white"
               android:textSize="@dimen/sp_15"/>
       </LinearLayout>
   </ScrollView>

</LinearLayout>
