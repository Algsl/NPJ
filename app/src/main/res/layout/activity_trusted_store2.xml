<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.TrustedStore2Activity">

    <include
        layout="@layout/title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:background="@color/background">
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:src="@drawable/trust_trust"/>

        <RelativeLayout
            android:id="@+id/at_trust_store2_rl_2000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/white_conner_5"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/at_trust_store2_tv_2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥2000"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_24"
                android:layout_centerVertical="true"
                android:textColor="@color/app_theme"
                android:layout_marginRight="@dimen/dp_15"/>

            <TextView
                android:id="@+id/at_trust_store2_tv2_2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保证金"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/at_trust_store2_rl_3000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/white_conner_5"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/at_trust_store2_tv_3000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥3000"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_24"
                android:layout_centerVertical="true"
                android:textColor="@color/app_theme"
                android:layout_marginRight="@dimen/dp_15"/>

            <TextView
                android:id="@+id/at_trust_store2_tv2_3000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保证金"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/at_trust_store2_rl_4000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/white_conner_5"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/at_trust_store2_tv_4000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥4000"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_24"
                android:layout_centerVertical="true"
                android:textColor="@color/app_theme"
                android:layout_marginRight="@dimen/dp_15"/>

            <TextView
                android:id="@+id/at_trust_store2_tv2_4000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保证金"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*可多次缴纳，累计保证金金额会展示给所有买家"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/at_trust_store2_rb_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="我已阅读"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《买家保障服务协议》"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/app_theme"/>
        </LinearLayout>

    </LinearLayout>
    
    <Button
        android:id="@+id/at_trust_store2_btn_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/theme_conner_5"
        android:text="现在加入"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"/>

</RelativeLayout>
