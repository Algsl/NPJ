<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LocationStoreActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/at_location_store_locate"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:src="@drawable/location_store_locate"
            android:layout_marginLeft="@dimen/dp_9"/>

        <TextView
            android:id="@+id/ac_localtionStore_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑州市金水区..."
            android:layout_centerVertical="true"
            android:textColor="@color/text9"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@id/at_location_store_locate"
            android:layout_marginLeft="@dimen/dp_10"/>

        <EditText
            android:id="@+id/at_location_store_et_search"
            android:layout_width="@dimen/dp_185"
            android:layout_height="@dimen/dp_29"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_conner"
            android:layout_alignParentRight="true"
            android:hint="请输入您需要的内容"
            android:textSize="@dimen/sp_15"
            android:paddingLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_12"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/home_search_gray"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/at_location_store_et_search"
            android:layout_marginLeft="@dimen/dp_11"/>
    </RelativeLayout>

    <!--<ImageView
        android:layout_width="@dimen/dp_351"
        android:layout_height="@dimen/dp_150"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/local_top"/>-->
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/ac_locationStore_tv_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_7"
                android:text="综合排序"
                android:background="@drawable/stroke_app_theme"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/app_theme"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/ac_locationStore_tv_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_7"
                android:text="距离最近"
                android:textSize="@dimen/sp_13"
                android:background="@drawable/stroke_white_2"
                android:textColor="@color/text6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/ac_locationStore_tv_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_7"
                android:text="折扣最多"
                android:textSize="@dimen/sp_13"
                android:background="@drawable/stroke_white_2"
                android:textColor="@color/text6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/ac_locationStore_tv_type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_7"
                android:text="评分最高"
                android:textSize="@dimen/sp_13"
                android:background="@drawable/stroke_white_2"
                android:textColor="@color/text6"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/at_location_store_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>