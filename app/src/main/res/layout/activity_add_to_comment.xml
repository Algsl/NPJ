<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zthx.npj.view.MyCircleView
            android:id="@+id/item_comment_mcv_pic"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/logo"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:id="@+id/item_comment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/item_comment_mcv_pic"
            android:text="看见一只猫"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text3"/>
        <LinearLayout
            android:id="@+id/item_comment_ll_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_alignLeft="@id/item_comment_tv_name"
            android:layout_below="@id/item_comment_tv_name">
            <ImageView
                android:id="@+id/item_comment_iv_star1"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@drawable/item_location_store_unstar"/>
            <ImageView
                android:id="@+id/item_comment_iv_star2"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@drawable/item_location_store_unstar"/>
            <ImageView
                android:id="@+id/item_comment_iv_star3"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@drawable/item_location_store_unstar"/>
            <ImageView
                android:id="@+id/item_comment_iv_star4"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@drawable/item_location_store_unstar"/>
            <ImageView
                android:id="@+id/item_comment_iv_star5"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@drawable/item_location_store_unstar"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_comment_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="十分不错，非常喜欢"
            android:layout_alignLeft="@id/item_comment_ll_star"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_below="@id/item_comment_ll_star"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_13"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/item_custom_comment_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_comment_ll_star"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_below="@id/item_comment_tv_content"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/item_custom_zp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_comment_ll_star"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_below="@id/item_custom_comment_rv"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户追评"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:id="@+id/item_comment_tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="十分不错，非常喜欢"
                android:layout_alignLeft="@id/item_comment_ll_star"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_below="@id/item_comment_ll_star"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_13"/>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/item_custom_comment_rv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_comment_ll_star"
                android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_comment_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="3月3日"
            android:layout_alignTop="@id/item_comment_tv_name"
            android:layout_marginRight="@dimen/dp_13"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text6"/>
        <TextView
            android:id="@+id/item_comment_tv_xiaofei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="消费后评价"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_below="@id/item_comment_tv_date"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text6"/>
    </RelativeLayout>


</LinearLayout>