<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/title_theme"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/app_theme"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:text="历史评价"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zthx.npj.view.MyCircleView
                    android:id="@+id/ac_addToComment_mcv_pic"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/ac_addToComment_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@id/ac_addToComment_mcv_pic"
                    android:text="看见一只猫"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"/>
                <LinearLayout
                    android:id="@+id/ac_addToComment_ll_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_alignLeft="@id/ac_addToComment_tv_name"
                    android:layout_below="@id/ac_addToComment_tv_name">
                    <ImageView
                        android:id="@+id/ac_addToComment_iv_star1"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/item_location_store_unstar"/>
                    <ImageView
                        android:id="@+id/ac_addToComment_iv_star2"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/item_location_store_unstar"/>
                    <ImageView
                        android:id="@+id/ac_addToComment_iv_star3"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/item_location_store_unstar"/>
                    <ImageView
                        android:id="@+id/ac_addToComment_iv_star4"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/item_location_store_unstar"/>
                    <ImageView
                        android:id="@+id/ac_addToComment_iv_star5"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/item_location_store_unstar"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/ac_addToComment_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="十分不错，非常喜欢"
                    android:layout_alignLeft="@id/ac_addToComment_ll_star"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_below="@id/ac_addToComment_ll_star"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/item_custom_comment_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ac_addToComment_ll_star"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_below="@id/ac_addToComment_tv_content"/>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/item_custom_zp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ac_addToComment_ll_star"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_below="@id/item_custom_comment_rv"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="用户追评"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:id="@+id/ac_addToComment_tv_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="十分不错，非常喜欢"
                        android:layout_alignLeft="@id/ac_addToComment_ll_star"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_below="@id/ac_addToComment_ll_star"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_13"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/item_custom_comment_rv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/ac_addToComment_ll_star"
                        android:layout_marginRight="@dimen/dp_12"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/ac_addToComment_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="3月3日"
                    android:layout_alignTop="@id/ac_addToComment_tv_name"
                    android:layout_marginRight="@dimen/dp_13"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text6"/>
                <TextView
                    android:id="@+id/ac_addToComment_tv_xiaofei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="消费后评价"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_below="@id/ac_addToComment_tv_date"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text6"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/app_theme"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:text="追加评价"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"/>
            <EditText
                android:id="@+id/ac_addToComment_et_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text6"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:hint="宝贝满足您的期待吗？说说他的优点和美中不足的地方吧"
                android:background="@null" />
            <me.zhouzhuo.zzimagebox.ZzImageBox
                android:id="@+id/ac_addToComment_iv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                app:zib_left_margin="@dimen/dp_12"
                app:zib_right_margin="@dimen/dp_12"
                app:zib_img_padding="@dimen/dp_10"
                app:zib_img_size_one_line="4"
                app:zib_max_line="1"
                app:zib_img_deletable="true"
                app:zib_img_add="@drawable/iv_add"
                app:zib_img_default="@drawable/iv_default"
                app:zib_img_delete="@drawable/iv_delete"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>