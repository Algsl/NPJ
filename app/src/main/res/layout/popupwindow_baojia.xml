<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_271"
    android:layout_height="@dimen/dp_350"
    android:background="@drawable/popwindow_supply_products_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要报价"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_2"
                android:src="@drawable/pop_location_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_2"
                android:src="@drawable/pop_location_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/gray_conner_2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="@dimen/dp_2">
                <EditText
                    android:id="@+id/pw_baojia_et_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_12"
                    android:background="@null"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text6"
                    android:textColorHint="@color/text9"
                    android:lineHeight="@dimen/dp_18"
                    android:hint="请输入您要报价的产品及价格例：
    苹果：3元/斤
    香蕉：200元/件
    地瓜：1000元/吨"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/gray_conner_2"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text3"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/pw_baojia_et_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:background="@null"
                android:hint="(选填）请填写您想说的内容"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                android:textColorHint="@color/text9"/>
        </LinearLayout>
        <Button
            android:id="@+id/pw_baojia_btn_commit"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:background="@color/app_theme"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_37"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/pw_iv_cancel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/pop_goods_detail_size_delete"/>
</RelativeLayout>