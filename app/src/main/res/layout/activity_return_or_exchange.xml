<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.ReturnOrExchangeActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <include
        layout="@layout/title_theme"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大溪地奥库拉套餐团购黑椒魔力新鲜..."
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dp_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格：奥库拉  500g/瓶"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text6"
                android:layout_marginTop="@dimen/dp_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥258.00"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_5"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/background"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/iv_logo1"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@drawable/jintuikuan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅退款"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text3"
            android:layout_toRightOf="@id/iv_logo1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"/>
        
        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_11"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_dingdan_go"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_1">
        <ImageView
            android:id="@+id/iv_logo2"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@drawable/tuihuotuikuan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货退款"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text3"
            android:layout_toRightOf="@id/iv_logo2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"/>

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_11"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_dingdan_go"/>
    </RelativeLayout>


</LinearLayout>
