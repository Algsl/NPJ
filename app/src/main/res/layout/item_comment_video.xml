<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zthx.npj.view.MyCircleView
        android:id="@+id/item_comment_video_cv_pic"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"/>

    <LinearLayout
        android:id="@+id/item_comment_video_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_toRightOf="@id/item_comment_video_cv_pic"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_commentVideo_tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒立走天下"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text6" />

        <!--<ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_23"
            android:background="@drawable/bg_daiyanren"
            android:text="金牌代言人"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_12"/>-->
        <ImageView
            android:id="@+id/item_commenVideo_iv_level"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_23"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_12"/>
        <!--<ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/man"
            android:layout_marginLeft="@dimen/dp_5"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/item_comment_video_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-03-25  09:46:21"
        android:layout_below="@id/item_comment_video_ll"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_toRightOf="@id/item_comment_video_cv_pic"
        android:textColor="@color/text9"
        android:textSize="@dimen/sp_13"/>

    <TextView
        android:id="@+id/item_comment_video_tv_comment"
        android:layout_width="@dimen/dp_282"
        android:layout_height="wrap_content"
        android:text="十分不错，非常喜欢，体验很棒,价格很实惠,希望多出一些精品课程。"
        android:layout_below="@id/item_comment_video_tv_time"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_toRightOf="@id/item_comment_video_cv_pic"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text3"
        android:maxEms="18"/>

    <TextView
        android:layout_width="@dimen/dp_282"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_comment_video_tv_comment"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_toRightOf="@id/item_comment_video_cv_pic"
        android:text="讲师回复：感谢您的评价，后续课程已经在准备，会更加全面的讲解。"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text6"
        android:textSize="@dimen/sp_12"
        android:background="@drawable/gray_conner_2"
        android:padding="@dimen/dp_5"/>


</RelativeLayout>