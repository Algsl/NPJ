<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_271"
    android:layout_height="@dimen/dp_350"
    android:background="@drawable/popwindow_supply_products_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_16"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_2"
                android:src="@drawable/pop_location_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_2"
                android:src="@drawable/pop_location_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            android:text="请选择举报理由" />
        <RelativeLayout
            android:id="@+id/pw_report_rl_reason1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="该账号存在欺骗诈钱行为"/>
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_centerVertical="true"
                android:src="@drawable/goods_detail_select"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pw_report_rl_reason2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="该账号存在其它违法行为"/>
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_centerVertical="true"
                android:src="@drawable/goods_detail_select"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pw_report_rl_reason3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="该账号侵犯他人权益"/>
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_centerVertical="true"
                android:src="@drawable/goods_detail_select"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pw_report_rl_reason4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text6"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="该账号存在虚假信息"/>
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_centerVertical="true"
                android:src="@drawable/goods_detail_select"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/pw_iv_cancel"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/pop_goods_detail_size_delete"/>
</RelativeLayout>