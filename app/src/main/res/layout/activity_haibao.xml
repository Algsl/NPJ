<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/title"
        android:id="@+id/title"/>
    <LinearLayout
        android:id="@+id/ac_haibao_ll"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_500"
        android:background="@drawable/hb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_130"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ac_haibao_mcv_userImg"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/logo"
                app:riv_oval="true"
                app:riv_border_width="@dimen/dp_1"
                app:riv_border_color="@color/white"/>
            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ac_haibao_mcv_userImg"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_13"
                android:textColor="#D3E7E5"
                android:text="我是"/>
            <TextView
                android:id="@+id/ac_haibao_tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hint"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:text="农品街用户"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hint"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#D3E7E5"
                android:layout_toRightOf="@id/ac_haibao_mcv_userImg"
                android:text="诚挚邀请您成为农品街代言人"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/hb_font"
            android:orientation="vertical">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ac_haibao_iv_qrImg"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginBottom="@dimen/dp_45"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text9"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="立即扫码进入礼包店成为农品街代言人，我在农品街庄园等你，让我们重温农场的乐趣吧！"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ac_haibao_tv_changeQRCode"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="更换样式"
            android:textColor="@color/app_theme"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ac_haibao_tv_generateHB"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_theme"
            android:text="生成并分享"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
