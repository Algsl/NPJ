<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tag="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:id="@+id/pop_layout"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:alpha="0.6"
            android:background="@android:color/black"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_goods_size_iv_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/pop_goods_size_tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥122"
            android:textStyle="bold"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@id/pop_goods_size_iv_pic"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"/>

        <TextView
            android:id="@+id/pop_goods_size_tv_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存：2000"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            android:layout_toRightOf="@id/pop_goods_size_iv_pic"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_below="@id/pop_goods_size_tv_old_price"
            android:layout_marginTop="@dimen/dp_6"/>
        <TextView
            android:id="@+id/pop_goods_size_tv_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            android:layout_toRightOf="@id/pop_goods_size_iv_pic"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_below="@id/pop_goods_size_tv_total_num"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/black_conner_5"
            android:layout_toRightOf="@id/pop_goods_size_tv_old_price">
            <TextView
                android:visibility="visible"
                android:id="@+id/pop_goods_size_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_gravity="center"
                android:text="代言人价255"
                android:textSize="@dimen/sp_12"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/pp_goodsSize_iv_cancel"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@drawable/pop_goods_detail_size_delete"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pw_goodsSize_rl_toVip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="#d4f1ee">
        <ImageView
            android:id="@+id/iv_pop_lingdang"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/pop_goods_detail_lingdang"/>
        <TextView
            android:id="@+id/pw_goodsSize_tv_toVIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成为农品街代言人此单立省403元"
            android:textColor="@color/app_theme"
            android:layout_toRightOf="@id/iv_pop_lingdang"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"/>

        <ImageView
            android:id="@+id/iv_pop_look"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@drawable/pop_goods_detail_look"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即查看"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp_13"
            android:layout_toLeftOf="@id/iv_pop_look"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_6"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pw_goodsSize_tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text3"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"/>
        <com.donkingliang.labels.LabelsView
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            tag:labelBackground="@drawable/gray_conner"
            tag:labelTextColor="@drawable/label_text"
            tag:labelTextSize="14sp"
            tag:labelTextPaddingBottom="@dimen/dp_4"
            tag:labelTextPaddingLeft="@dimen/dp_10"
            tag:labelTextPaddingRight="@dimen/dp_10"
            tag:labelTextPaddingTop="@dimen/dp_4"
            tag:lineMargin="10dp"
            tag:wordMargin="10dp"
            tag:selectType="SINGLE"
            tag:maxSelect="30" />
    </LinearLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/pw_goodsSize_rl_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="购买数量"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"/>
        <LinearLayout
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_22"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/item_pop_goods_num_add"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/half_left_conner">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shooping_jian"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/item_pop_goods_tv_num"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/shopping_num_bg"
                android:text="1"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text3"/>

            <RelativeLayout
                android:id="@+id/item_pop_goods_num_jian"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/half_right_conner">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopping_jia"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">

        <Button
            android:id="@+id/item_pop_goods_add_shopping_car"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:text="加入购物车"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_14" />
        <Button
            android:id="@+id/item_pop_goods_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/app_theme"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>