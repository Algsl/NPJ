<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90">

    <ImageView
        android:id="@+id/item_my_collect_goods_pic"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/dp_12"/>

    <TextView
        android:id="@+id/item_my_collect_goods_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旅行必备套装，旅行套装6件套,各种好货随你来选，一物多用给你好看，各种新鲜..."
        android:layout_toRightOf="@id/item_my_collect_goods_pic"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_16"
        android:maxLines="2"
        android:layout_marginTop="@dimen/dp_13"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text3"/>

    <TextView
        android:id="@+id/item_my_collect_goods_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥102"
        android:layout_alignLeft="@id/item_my_collect_goods_tv_title"
        android:layout_below="@id/item_my_collect_goods_tv_title"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/app_theme"
        android:textSize="@dimen/sp_14"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15">

        <ImageView
            android:id="@+id/item_my_collect_iv_addCart"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/my_collect_shoppingcart"/>

        <ImageView
            android:id="@+id/item_my_collect_iv_delCollection"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/my_collect_delete"
            android:layout_marginLeft="@dimen/dp_13"/>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_1"
       android:background="@color/background"
       android:layout_marginLeft="@dimen/dp_12"
       android:layout_marginRight="@dimen/dp_12"
       android:layout_alignParentBottom="true"></View>
</RelativeLayout>