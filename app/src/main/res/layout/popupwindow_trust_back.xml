<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_271"
    android:layout_height="@dimen/dp_300"
    android:background="@drawable/popwindow_supply_products_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请退还金额"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_16"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_2"
                android:src="@drawable/pop_location_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_2"
                android:src="@drawable/pop_location_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/stroke_zise_5">
            <EditText
                android:inputType="number"
                android:id="@+id/pw_trustBack_et_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:hint="请以1000的整数倍填写退还金额"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            android:id="@+id/pw_trustBack_tv_confirm"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_60"
            android:text="确定"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/theme_conner_5"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/pw_iv_cancel"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/pop_goods_detail_size_delete"/>
</RelativeLayout>