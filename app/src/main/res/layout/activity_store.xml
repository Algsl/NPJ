<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_138"
        android:background="@drawable/mine_title_gb">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_30">
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/ac_store_iv_back"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@drawable/white_back"/>

            <RelativeLayout
                android:layout_width="@dimen/dp_246"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/white_conner_5">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/home_search_gray"/>
                <EditText
                    android:id="@+id/at_store_et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:background="@null"
                    android:hint="请输入您想要的内容"
                    android:lines="1"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ac_store_ll_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/home_kind"/>
                <TextView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_12"
                    android:text="分类"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ac_store_iv_message"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/home_message"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/white_conner_5"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_88"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ac_store_iv_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:src="@drawable/test"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/dp_10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ac_store_tv_storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哒哒商城"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_18"
                android:textColor="@color/text3"
                android:textSize="@dimen/dp_16"/>
            <ImageView
                android:id="@+id/ac_store_iv_level"
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_26"
                android:layout_toRightOf="@id/ac_store_tv_storeName"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_13"
                android:src="@drawable/level3"/>
            <TextView
                android:id="@+id/ac_store_tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textColor="@color/text6"
                android:textSize="@dimen/dp_13"
                android:layout_below="@id/ac_store_tv_storeName"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/sp_12"/>
            <TextView
                android:id="@+id/ac_store_tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ac_store_tv_tag1"
                android:layout_below="@id/ac_store_tv_storeName"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="12525"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text3"/>
            <TextView
                android:id="@+id/ac_store_tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺商品"
                android:textColor="@color/text6"
                android:textSize="@dimen/dp_13"
                android:layout_toRightOf="@id/ac_store_tv_fans"
                android:layout_below="@id/ac_store_tv_storeName"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/sp_12"/>
            <TextView
                android:id="@+id/ac_store_tv_goodsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ac_store_tv_tag2"
                android:layout_below="@id/ac_store_tv_storeName"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="12525"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text3"/>
            <ImageView
                android:id="@+id/ac_store_iv_collect"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/uncollect_star"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_30"/>
            <TextView
                android:layout_below="@id/ac_store_iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="@color/text9"
                android:textSize="@dimen/sp_15"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_25"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_180"
        android:orientation="vertical">
        <!--推荐类-->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ac_store_ll_tuijian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ac_store_tv_tuijian"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="店长推荐"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/app_theme"/>
                <TextView
                    android:id="@+id/ac_store_tv_goods"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="全部商品"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"/>
                <RelativeLayout
                    android:id="@+id/ac_store_rl"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/ac_store_tv_saleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="销量"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/text3"/>
                    <ImageView
                        android:id="@+id/ac_store_iv_sort"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/unselect"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/ac_store_tv_saleNum"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </RelativeLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ac_store_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!--搜索类-->
        <LinearLayout
            android:id="@+id/ac_store_ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/ac_store_tv_searchTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="搜索结果"
                android:gravity="center"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ac_store_rv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/ac_store_tv_noResult"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:text="搜索结果不存在，换个关键词试试？"/>
        </LinearLayout>

        <!--分类搜索结果-->
        <LinearLayout
            android:id="@+id/ac_store_ll_classifyResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/ac_store_tv_classifyTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="搜索结果"
                android:gravity="center"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_15"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ac_store_rv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/ac_store_tv_classifyNoResult"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:text="该分类暂无商品，请切换其他分类试试？"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
