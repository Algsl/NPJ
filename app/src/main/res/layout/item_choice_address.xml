<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20">
        <TextView
            android:id="@+id/item_choice_address_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巨星不易"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"/>

        <TextView
            android:id="@+id/item_choice_address_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_choice_address_tv_name"
            android:text="154****2546"
            android:textColor="@color/text3"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/app_theme"
            android:layout_below="@id/item_choice_address_tv_name"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:background="@drawable/stroke_theme_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市金水区郑汴路未来路嘉禾万事小区1号楼4单元蜂巢快递柜"
            android:layout_below="@id/item_choice_address_tv_phone"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="@color/text6"
            android:textSize="@dimen/sp_13"
            android:maxLines="2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/item_choice_address_tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text3"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_choice_address_tv_delete"
            android:layout_marginRight="@dimen/dp_35"/>
    </RelativeLayout>

</LinearLayout>