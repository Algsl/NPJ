<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zthx.npj.ui.PurchaserCertificationActivity">

    <include
        layout="@layout/title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/title">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:src="@drawable/caigoushang_banner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_vertical">
            <View
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/sp_15"
                android:background="@color/app_theme"
                android:layout_marginLeft="@dimen/dp_12"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证优势:"
                android:textColor="@color/text3"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/yangpinzhongxin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费拿样"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进货有保障"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/zhuanshujia"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天天低价"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采购享优惠"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/caigou1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布采购"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精准找货源"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/bianyihuo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专属标识"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:layout_marginTop="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务超体验"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text6"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dp_20"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/sp_15"
                    android:background="@color/app_theme"
                    android:layout_marginLeft="@dimen/dp_12"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证须知"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择以下其中一种方式上传相关材料：
1.营业执照（推荐）
2.档口照片
3.名片/工牌
                        "
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/at_trust_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击即表示同意"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《农品街企业认证协议》"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/app_theme"
            />
    </LinearLayout>

    <Button
        android:id="@+id/at_purchaser_certification_btn_attestation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/at_trust_bottom"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/theme_conner_5"
        android:text="开始认证"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"/>

</RelativeLayout>
