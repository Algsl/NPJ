<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.GoodsDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_283">

                <com.youth.banner.Banner
                    android:id="@+id/at_goods_detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.youth.banner.Banner>
                
                <RelativeLayout
                    android:id="@+id/at_goods_detail_rl_sec_kill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_theme"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_miaosha_pic"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sec_kill_pic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="正在抢购"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_toRightOf="@id/iv_miaosha_pic"
                        android:layout_marginLeft="@dimen/dp_10"/>

                    <com.zthx.npj.view.TimeTextView
                        android:id="@+id/at_goods_detail_ttv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_17"
                        android:text="02:31:18"/>

                    <TextView
                        android:id="@+id/at_goods_detail_tv_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距结束: "
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_13"
                        android:layout_alignTop="@id/at_goods_detail_ttv"
                        android:layout_toLeftOf="@id/at_goods_detail_ttv"
                        android:layout_marginRight="@dimen/dp_5"/>

                    <com.zthx.npj.view.SaleDetailProgressView
                        android:id="@+id/at_goods_detail_spv"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_10"
                        android:layout_alignLeft="@id/at_goods_detail_tv_log"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_6"
                        app:nearOverText="即将售罄"
                        app:overText="已售罄"/>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/at_goods_detail_rl_sec_kill_done"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/black"
                    android:alpha="0.45"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@android:color/white"
                        android:text="本场秒杀活动已结束"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ac_goodsDetail_iv_back"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_13"
                    android:src="@drawable/goods_detial_back" />
            </RelativeLayout>

            <LinearLayout
              android:id="@+id/at_goods_detail_ll_goods"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
    
                  <TextView
                      android:id="@+id/at_goods_detail_tv_goods_new_price"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_12"
                      android:text="￥122"
                      android:textColor="@color/app_theme"
                      android:textSize="@dimen/sp_15" />
    
                  <TextView
                      android:id="@+id/at_goods_detail_tv_goods_old_price"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_11"
                      android:text="222"
                      android:textColor="@color/text9"
                      android:textSize="@dimen/sp_12" />
              </LinearLayout>
              <TextView
                  android:id="@+id/at_goods_detail_tv_goods_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dp_13"
                  android:layout_marginRight="@dimen/dp_13"
                  android:maxLines="2"
                  android:text="异丙甲草胺绿色无污染大豆田玉米田小麦田均可放心使用;会员可享受包邮"
                  android:textColor="@color/text3"
                  android:textSize="@dimen/sp_15" />
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
    
                  <TextView
                      android:id="@+id/at_goods_detail_selled_num"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_12"
                      android:text="已售100"
                      android:textColor="@color/text9"
                      android:textSize="@dimen/sp_12" />
    
                  <TextView
                      android:id="@+id/at_goods_detail_hold_num"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_11"
                      android:layout_toRightOf="@id/at_goods_detail_selled_num"
                      android:text="库存200"
                      android:textColor="@color/text9"
                      android:textSize="@dimen/sp_12" />
    
                  <TextView
                      android:id="@+id/at_goods_detail_tv_goods_is_baoyou"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="@dimen/dp_12"
                      android:text="快递：免运费"
                      android:textSize="@dimen/sp_12" />
              </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/at_goods_detail_ll_presell"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/at_goods_detail_tv_pre_sell_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="飞利浦蒸馏机健康安全三年保修"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text3"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/at_goods_detail_tv_pre_sell_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥120"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/app_theme"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ProgressBar
                        android:id="@+id/at_pre_sell_pb"
                        android:alpha="1"
                        android:layout_width="@dimen/dp_321"
                        android:layout_height="@dimen/dp_7"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/pre_sell_progress"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:max="100"
                        android:progress="80"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_3"/>
                    <ImageView
                        android:layout_width="@dimen/dp_17"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:src="@drawable/pre_sell_fire"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/at_goods_detail_tv_pre_sell_yuding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预定人数"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_30"
                        android:background="@color/background"
                        android:layout_gravity="center"></View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:id="@+id/at_goods_detail_tv_pre_sell_yushou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预售金额"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_30"
                        android:background="@color/background"
                        android:layout_gravity="center"></View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/at_goods_detail_tv_pre_sell_dacheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="达成率"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text3"/>
                    </LinearLayout>
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/background"></View>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"
                        android:background="#cccccc"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_46"
                        android:layout_marginRight="@dimen/dp_43"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_10"
                                android:src="@drawable/circle_gray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评审"
                                android:textColor="@color/text3"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_7"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_10"
                                android:src="@drawable/circle_gray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上市"
                                android:textColor="@color/text3"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_7"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_10"
                                android:src="@drawable/circle_theme"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预售中（12天后结束）"
                                android:textColor="@color/text3"
                                android:textSize="@dimen/sp_12"
                                android:maxLines="1"
                                android:layout_marginTop="@dimen/dp_7"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_10"
                                android:src="@drawable/circle_gray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发货"
                                android:textColor="@color/text3"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_7"/>
                        </LinearLayout>
                        
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/background"></View>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@color/background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/at_goods_detail_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="规格: "
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/text9"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_toRightOf="@id/at_goods_detail_kind"
                    android:text="选择规格"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/goods_detail_select" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流: "
                android:layout_marginLeft="@dimen/dp_12"
                android:textColor="@color/text9"
                android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 预计3.20号开始发货 "
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/at_goods_detail_btn_pre_sell_detail"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:background="@color/app_theme"
                    android:text="详情"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/at_goods_detail_btn_pre_sell_know"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:text="须知"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/at_goods_detail_btn_pre_sell_comment"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:text="评价"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ac_goodsDetail_rv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:paddingTop="@dimen/dp_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@android:color/white">
            <LinearLayout
                android:id="@+id/ac_goodsDetail_ll_store"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/goods_detail_store"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ac_goodsDetail_ll_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/goods_detail_collect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/goods_detail_kefu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text6"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/at_goods_detail_btn_add_shopping_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="加入购物车"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_14" />
            <Button
                android:id="@+id/at_goods_detail_btn_buy_now"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/app_theme"
                android:text="立即购买"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@drawable/goods_detail_share"/>
    
</RelativeLayout>